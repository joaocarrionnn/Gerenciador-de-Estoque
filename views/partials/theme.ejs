.reagent-table tr:hover,
.glassware-grid tr:hover,
.products-table tr:hover,
.movements-table tr:hover,
.enhanced-table tr:hover {
    background-color: var(--bg-hover) !important;
    transform: translateY(0); /* Remove qualquer transform que possa estar atrapalhando */
}

.reagent-table tr:hover td {
    background-color: transparent !important; /* Deixa a cor da linha controlar o hover */
}

/* Hovers de itens de lista */
.movement-item:hover,
.pdf-item:hover,
.search-result-item:hover {
    background-color: var(--bg-hover) !important;
    transform: translateX(4px);
    transition: all 0.2s ease;
}

/* Hovers específicos para elementos interativos */
.item-card:hover,
.pdf-item:hover {
    background-color: var(--bg-hover) !important;
