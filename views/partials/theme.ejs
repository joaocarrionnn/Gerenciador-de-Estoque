        --bg-secondary: #ffffff;
        --bg-tertiary: #f8f9fa;
        --bg-hover: #e9ecef;
        
        --text-primary: #2d3748;
        --text-secondary: #6c757d;
        --text-tertiary: #9ca3af;
        
        --border-color: #e2e8f0;
        --border-hover: #d1d5db;
        
