        --input-focus: #4361ee;
        
        --modal-bg: #ffffff;
        --modal-overlay: rgba(0, 0, 0, 0.5);
        
        --primary: #2c3e50;
        --primary-hover: #3e4b57;
        --secondary: #6c757d;
        --success: #28a745;
        --warning: #ffc107;
        --danger: #dc3545;
        --info: #17a2b8;
    }
    
    [data-theme="dark"] {
        /* Tema Escuro */
        --bg-primary: #0f172a;
        --bg-secondary: #1e293b;
        --bg-tertiary: #334155;
        --bg-hover: #475569;
        
        --text-primary: #f1f5f9;
        --text-secondary: #cbd5e1;
        --text-tertiary: #94a3b8;
        
        --border-color: #334155;
        --border-hover: #475569;
        
        --card-bg: #1e293b;
        --card-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        --card-shadow-hover: 0 10px 20px rgba(0, 0, 0, 0.4);
        
