<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sistema Lab+</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>

.sidebar-custom {
      background: #2c3e50;
      transition: all 0.3s ease;
      box-shadow: 2px 0 15px rgba(0, 0, 0, 0.2);
      position: fixed;
      left: 0;
      top: 0;
      height: 100vh;
      width: 320px;
      overflow-y: auto;
      z-index: 1000;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }


    /* Ajustes para o conteúdo principal */
    main {
      margin-left: 320px;
      width: calc(100% - 320px);
      transition: margin-left 0.3s ease, width 0.3s ease;
    }

    .logo-custom {
      display: flex;
      align-items: center;
      padding: 25px 30px;
      border-bottom: 2px solid rgba(255, 255, 255, 0.15);
      margin-bottom: 25px;
    }

    .menu-custom {
      padding: 0 20px;
      display: flex;
      flex-direction: column;
      gap: 8px;
    }

    .menu-item-custom {
      display: flex;
      align-items: center;
      padding: 15px 20px;
      color: #ecf0f1;
      text-decoration: none;
      border-radius: 8px;
      transition: all 0.2s ease;
      font-size: 16px;
    }
    
    .menu-item-custom:hover {
      background: rgba(52, 152, 219, 0.2);
      color: #3498db;
      transform: translateX(5px);
    }
    
    .menu-item-custom.active {
      background: rgba(52, 152, 219, 0.25);
      color: #3498db;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    
    .menu-item-custom i {
      width: 24px;
      margin-right: 15px;
      text-align: center;
      font-size: 18px;
      transition: margin-right 0.3s ease;
    }
    
    .user-area-custom {
      border-top: 2px solid rgba(255, 255, 255, 0.15);
      padding: 20px 25px;
    }
    
    .logout-btn-custom {
      color: #95a5a6;
      padding: 10px;
      border-radius: 50%;
      transition: all 0.2s ease;
      font-size: 18px;
    }
    
    .logout-btn-custom:hover {
      color: #e74c3c;
      background: rgba(231, 76, 60, 0.15);
      transform: scale(1.1);
    }
    
    /* Ajustes responsivos */
    @media (max-width: 1200px) {
      .sidebar-custom {
        width: 280px;
      }
      main {
        margin-left: 280px;
        width: calc(100% - 280px);
      }
    }

    /* Modo compacto (apenas ícones) */
    @media (max-width: 992px) {
      .sidebar-custom {
        width: 80px;
        align-items: center;
      }
      
      .logo-text-custom {
        display: none;
      }
      
      .menu-item-custom {
        width: 50px;
        height: 50px;
        padding: 0;
        justify-content: center;
        margin: 0 auto 8px;
      }
      
      .menu-item-custom span {
        display: none;
      }
      
      .menu-item-custom i {
        margin-right: 0;
        font-size: 20px;
        width: auto;
      }
      
      .user-info-text {
        display: none;
      }
      
      main {
        margin-left: 80px;
        width: calc(100% - 80px);
      }
    }

    /* Modo mobile (inferior da página) */
    @media (max-width: 576px) {
      .sidebar-custom {
        width: 100%;
        height: 70px;
        flex-direction: row;
        bottom: 0;
        top: auto;
        padding: 10px 0;
        left: 0;
        right: 0;
      }
      
      .logo-custom {
        display: none;
      }
      
      .menu-custom {
        flex-direction: row;
        flex: 1;
        justify-content: space-around;
        padding: 0 10px;
        gap: 0;
      }
      
      .menu-item-custom {
        width: 50px;
        height: 50px;
        margin-bottom: 0;
        flex-direction: column;
        padding: 8px 5px;
        font-size: 12px;
        border-radius: 10px;
      }
      
      .menu-item-custom i {
        font-size: 20px;
        margin-right: 0;
        margin-bottom: 4px;
      }
      
      .menu-item-custom span {
        display: block !important;
        font-size: 11px;
        text-align: center;
        line-height: 1.2;
      }
      
      .user-area-custom {
        display: none;
      }
      
      main {
        margin-left: 0;
        margin-bottom: 70px;
        width: 100%;
      }
    }

    /* Estilos para o menu mobile (bottom navbar) */
    .mobile-nav {
      display: none;
    }

    @media (max-width: 576px) {
      .mobile-nav {
        display: flex;
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        background: #2c3e50;
        justify-content: space-around;
        padding: 10px 0;
        z-index: 1000;
      }
      
      .mobile-nav-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        color: #ecf0f1;
        text-decoration: none;
        font-size: 11px;
        padding: 5px;
      }
      
      .mobile-nav-item i {
        font-size: 18px;
        margin-bottom: 4px;
      }
      
      .mobile-nav-item.active {
        color: #3498db;
      }
      
      .desktop-sidebar {
        display: none;
      }
      
      main {
        margin-bottom: 70px;
      }
    }

    .user-photo {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid rgba(255, 255, 255, 0.2);
  }

  .mobile-user-photo {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    object-fit: cover;
    margin-bottom: 4px;
  }

  /* Ajuste responsivo */
  @media (max-width: 992px) {
    .user-photo {
      width: 35px;
      height: 35px;
    }
  }

  @media (max-width: 576px) {
    .user-photo {
      width: 30px;
      height: 30px;
    }
  }
  </style>
</head>
<body class="flex h-screen bg-gray-100">

  <!-- SIDEBAR DESKTOP - ESTILO ESTOQUEQ -->
  <aside class="desktop-sidebar hidden md:flex sidebar-custom">
    <!-- Logo -->
    <div>
      <div class="logo-custom">
        <a href="/">
          <i class="fas fa-flask text-blue-400 text-2xl mr-3" style="font-size: 32px; margin-right: 15px;"></i>
          <span class="logo-text-custom text-white font-bold text-xl" style="font-size: 24px; font-weight: 800; letter-spacing: 0.5px;">Sistema Lab+</span>
        </a>
      </div>

      <!-- Menu -->
      <nav class="mt-6 menu-custom">
        <!-- Dashboard - Disponível para todos -->
        <a href="/" class="menu-item-custom" id="dashboard-menu">
          <i class="fas fa-home"></i>
          <span>Dashboard</span>
        </a>

        <!-- Reagentes - Disponível para todos -->
        <a href="/produtos" class="menu-item-custom" id="produtos-menu">
          <i class="fas fa-flask"></i>
          <span>Reagentes</span>
        </a>

        <!-- Vidrarias - Disponível para todos -->
        <a href="/vidracarias" class="menu-item-custom" id="vidracarias-menu">
          <i class="fas fa-flask"></i>
          <span>Vidrarias</span>
        </a>

        <!-- MENU APENAS PARA PROFESSORES (ADMIN) -->
        <% if (user && user.tipo === 'admin') { %>
          <!-- Entradas - Apenas professores -->
          <a href="/entrada-reagentes" class="menu-item-custom" id="entradas-menu">
            <i class="fas fa-sign-in-alt"></i>
            <span>Entradas</span>
          </a>

          <!-- Saídas - Apenas professores -->
          <a href="/saida-reagentes" class="menu-item-custom" id="saidas-menu">
            <i class="fas fa-sign-out-alt"></i>
            <span>Saídas</span>
          </a>

          <!-- Relatórios - Apenas professores -->
          <a href="/relatorios" class="menu-item-custom" id="relatorios-menu">
            <i class="fas fa-chart-line"></i>
            <span>Relatórios</span>
          </a>
        <% } %>
      </nav>
    </div>

    <!-- Perfil Usuário -->
    <div class="user-area-custom">
      <a href="/perfil" class="flex items-center hover:bg-[#34495e] p-2 rounded-lg transition-all">
        <% if (user && user.foto_perfil) { %>
          <div class="w-10 h-10 rounded-full overflow-hidden flex-shrink-0" style="margin-right: 12px;">
            <img 
              src="/uploads/profile-photos/<%= user.foto_perfil %>?t=<%= new Date().getTime() %>" 
              alt="Foto de perfil" 
              class="w-full h-full object-cover"
              onerror="this.onerror=null; this.src='https://ui-avatars.com/api/?name=<%= encodeURIComponent(user.nome || 'Usuário') %>&background=2c3e50&color=fff&size=128'"
            >
          </div>
        <% } else { %>
          <i class="fas fa-user-circle text-blue-400 text-2xl" style="font-size: 40px; margin-right: 12px;"></i>
        <% } %>
        <div class="user-info-text">
          <p class="text-sm font-medium text-white" style="font-size: 16px; font-weight: 600;">
            <%= user ? user.nome : 'Usuário' %>
          </p>
          <p class="text-xs text-gray-400" style="font-size: 13px;">
            <% if (user && user.tipo === 'admin') { %>
              <i class="fas fa-user-shield mr-1"></i> Professor
            <% } else { %>
              <i class="fas fa-user-graduate mr-1"></i> Aluno
            <% } %>
          </p>
        </div>
      </a>
      <a href="/auth/logout" class="logout-btn-custom">
        <i class="fas fa-sign-out-alt"></i>
      </a>
    </div>
  </aside>

  <!-- MENU MOBILE (BOTTOM NAVBAR) -->
  <nav class="mobile-nav">
    <!-- Home - Disponível para todos -->
    <a href="/" class="mobile-nav-item" id="mobile-dashboard">
      <i class="fas fa-home"></i>
      <span>Home</span>
    </a>

    <!-- Reagentes - Disponível para todos -->
    <a href="/produtos" class="mobile-nav-item" id="mobile-produtos">
      <i class="fas fa-flask"></i>
      <span>Reag.</span>
    </a>

    <!-- Vidrarias - Disponível para todos -->
    <a href="/vidracarias" class="mobile-nav-item" id="mobile-vidracarias">
      <i class="fas fa-glass-whiskey"></i>
      <span>Vidr.</span>
    </a>

    <!-- MENU APENAS PARA PROFESSORES NO MOBILE -->
    <% if (user && user.tipo === 'admin') { %>
      <!-- Entradas - Apenas professores -->
      <a href="/entrada-reagentes" class="mobile-nav-item" id="mobile-entradas">
        <i class="fas fa-sign-in-alt"></i>
        <span>Entr.</span>
      </a>

      <!-- Saídas - Apenas professores -->
      <a href="/saida-reagentes" class="mobile-nav-item" id="mobile-saidas">
        <i class="fas fa-sign-out-alt"></i>
        <span>Saíd.</span>
      </a>

      <!-- Relatórios - Apenas professores -->
      <a href="/relatorios" class="mobile-nav-item" id="mobile-relatorios">
        <i class="fas fa-chart-line"></i>
        <span>Relat.</span>
      </a>
    <% } %>

    <!-- Perfil - Disponível para todos -->
    <a href="/perfil" class="mobile-nav-item" id="mobile-perfil">
      <% if (user && user.foto_perfil) { %>
        <div class="w-6 h-6 rounded-full overflow-hidden mb-1">
          <img 
            src="/uploads/profile-photos/<%= user.foto_perfil %>" 
            alt="Perfil" 
            class="w-full h-full object-cover"
            onerror="this.style.display='none'; this.nextElementSibling.style.display='block'"
          >
          <i class="fas fa-user-circle" style="display: none;"></i>
        </div>
      <% } else { %>
        <i class="fas fa-user-circle"></i>
      <% } %>
      <span>Perfil</span>
    </a>
  </nav>

  <script>
   document.addEventListener('DOMContentLoaded', function() {
      // SUA FUNÇÃO ORIGINAL setActiveMenu() AQUI
      function setActiveMenu() {
        const path = window.location.pathname;
        let activeMenuId = '';
        
        // Determinar qual menu deve estar ativo baseado na URL
        if (path.includes('/produtos') || path === '/produtos') {
            activeMenuId = 'produtos-menu';
        } else if (path.includes('/entrada-reagentes') || path === '/entrada-reagentes') {
            activeMenuId = 'entradas-menu';
        } else if (path.includes('/saida-reagentes') || path === '/saida-reagentes') {
            activeMenuId = 'saidas-menu';
        } else if (path.includes('/relatorios') || path === '/relatorios') {
            activeMenuId = 'relatorios-menu';
        } else if (path.includes('/vidracarias') || path === '/vidracarias') {
            activeMenuId = 'vidracarias-menu';
        } else if (path === '/' || path.includes('/dashboard')) {
            activeMenuId = 'dashboard-menu';
        } else if (path.includes('/perfil') || path === '/perfil') {
            activeMenuId = 'perfil-menu';
        }
        
        // Remover a classe 'active' de todos os menus
        const allMenuItems = document.querySelectorAll('.menu-item-custom, .mobile-nav-item');
        allMenuItems.forEach(item => {
            item.classList.remove('active');
        });
        
        // Adicionar a classe 'active' ao menu correspondente
        const activeMenuItem = document.getElementById(activeMenuId);
        if (activeMenuItem) {
            activeMenuItem.classList.add('active');
        }
        
        // Atualizar também o menu mobile
        const mobileMenuId = 'mobile-' + activeMenuId.split('-')[0];
        const activeMobileMenuItem = document.getElementById(mobileMenuId);
        if (activeMobileMenuItem) {
            activeMobileMenuItem.classList.add('active');
        }
      }
      
      // Chamar a função ao carregar a página
      setActiveMenu();
      
      // Adiciona interatividade ao menu (opcional - para quando o usuário clicar)
      const menuItems = document.querySelectorAll('.menu-item-custom, .mobile-nav-item');
      
      menuItems.forEach(item => {
        item.addEventListener('click', function(e) {
          // Se não for um link válido, prevenir o comportamento padrão
          if (this.getAttribute('href') === '#') {
            e.preventDefault();
          }
          
          menuItems.forEach(i => i.classList.remove('active'));
          this.classList.add('active');
        });
      });
      
      // Ajusta o layout quando a janela é redimensionada
      window.addEventListener('resize', function() {
        // Força o redesenho dos elementos para evitar bugs visuais
        document.body.classList.remove('resize-animation-stopper');
        void document.body.offsetWidth;
        document.body.classList.add('resize-animation-stopper');
      });
    });
  </script>
</body>
</html>