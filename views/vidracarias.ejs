        function loadGlassware() {
            const glasswareList = document.getElementById('glassware-list');
            glasswareList.innerHTML = '';
            
            glasswareData.forEach(glassware => {
                const glasswareCard = document.createElement('div');
                glasswareCard.className = 'glassware-card';
                
                // Determinar ícone com base no tipo de vidraria
                let iconClass = 'fas fa-flask'; // padrão
                if (glassware.name.includes('Balão')) iconClass = 'fas fa-weight';
                if (glassware.name.includes('Béquer')) iconClass = 'fas fa-glass-whiskey';
                if (glassware.name.includes('Erlenmeyer')) iconClass = 'fas fa-mortar-pestle';
                if (glassware.name.includes('Pipeta')) iconClass = 'fas fa-tint';
                if (glassware.name.includes('Bureta')) iconClass = 'fas fa-ruler-vertical';
                if (glassware.name.includes('Condensador')) iconClass = 'fas fa-wind';
                if (glassware.name.includes('Funil')) iconClass = 'fas fa-filter';
                if (glassware.name.includes('Proveta')) iconClass = 'fas fa-vial';
                
                // Determinar classe de status
                let statusClass = 'status-available';
                let statusText = 'Disponível';
                if (glassware.status === 'low') {
                    statusClass = 'status-low';
                    statusText = 'Estoque Baixo';
                } else if (glassware.status === 'unavailable') {
                    statusClass = 'status-unavailable';
                    statusText = 'Indisponível';
                }
                
                glasswareCard.innerHTML = `
                    <div class="glassware-image">
                        <i class="${iconClass}"></i>
                    </div>
                    <div class="glassware-content">
                        <h3 class="glassware-name">${glassware.name}</h3>
                        <div class="glassware-details">
                            <div class="glassware-detail">
                                <span>Quantidade:</span>
                                <span>${glassware.quantity} unidades</span>
                            </div>
                            <div class="glassware-detail">
                                <span>Capacidade:</span>
                                <span>${glassware.capacity}</span>
                            </div>
                            <div class="glassware-detail">
                                <span>Material:</span>
                                <span>${glassware.material}</span>
                            </div>
                            <div class="glassware-detail">
                                <span>Categoria:</span>
                                <span>${glassware.category}</span>
                            </div>
                        </div>
                        <span class="glassware-status ${statusClass}">${statusText}</span>
                    </div>
                `;
                
                glasswareList.appendChild(glasswareCard);
            });
        }

        // Função para carregar as movimentações
        function loadMovements() {
            const movementsList = document.getElementById('movements-list');
            movementsList.innerHTML = '';
            
            movementData.forEach(movement => {
                const movementItem = document.createElement('li');
                movementItem.className = 'movement-item';
                
                movementItem.innerHTML = `
                    <div class="movement-icon ${movement.type === 'in' ? 'movement-in' : 'movement-out'}">
                        <i class="fas fa-arrow-${movement.type === 'in' ? 'down' : 'up'}"></i>
                    </div>
                    <div class="movement-content">
                        <p class="movement-title">${movement.type === 'in' ? 'Entrada' : 'Saída'} - ${movement.glassware}</p>
                        <div class="movement-details">
                            <span class="movement-quantity">${movement.quantity} unidades</span>
                            <span class="movement-date">${new Date(movement.date).toLocaleString('pt-BR')}</span>
                        </div>
                        <small>Por: ${movement.responsible}</small>
                    </div>
                `;
                
                movementsList.appendChild(movementItem);
            });
        }

        // Função para carregar estatísticas
        function loadStatistics() {
            // Calcular totais
            const totalGlassware = glasswareData.reduce((sum, item) => sum + item.quantity, 0);
            const availableGlassware = glasswareData.filter(item => item.status === 'available')
                .reduce((sum, item) => sum + item.quantity, 0);
            
            // Atualizar os contadores
            document.getElementById('total-glassware').textContent = totalGlassware;
            document.getElementById('available-glassware').textContent = availableGlassware;
            document.getElementById('total-items').textContent = `${totalGlassware} itens em inventário`;
            
            // Calcular estatísticas por categoria
            const categoryStats = {};
            glasswareData.forEach(item => {
                if (!categoryStats[item.category]) {
                    categoryStats[item.category] = 0;
                }
                categoryStats[item.category] += item.quantity;
            });
            
            // Atualizar as estatísticas de categorias
            const categoryStatsElement = document.getElementById('category-stats');
            categoryStatsElement.innerHTML = '';
            
            for (const category in categoryStats) {
                const percentage = Math.round((categoryStats[category] / totalGlassware) * 100);
                const progressBar = document.createElement('div');
                progressBar.className = 'd-flex align-items-center mt-3';
                
                progressBar.innerHTML = `
                    <div class="flex-grow-1 me-3">
                        <div class="small text-muted">${category}</div>
                        <div class="progress mt-1" style="height: 8px;">
                            <div class="progress-bar bg-primary" role="progressbar" style="width: ${percentage}%" 
                                aria-valuenow="${percentage}" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    <div class="flex-shrink-0">
                        <span class="text-dark fw-bold">${percentage}%</span>
                    </div>
                `;
                
                categoryStatsElement.appendChild(progressBar);
            }
        }

        // Botão para adicionar vidraria
        document.getElementById('add-glassware').addEventListener('click', function() {
            showToast('Funcionalidade de adicionar vidraria em desenvolvimento', 'info');
        });

        // Carregar dados iniciais
        document.addEventListener('DOMContentLoaded', function() {
            loadGlassware();
            loadMovements();
            loadStatistics();
            
            // Simular carregamento de dados
            showToast('Estoque de vidrarias carregado com sucesso!');
        });
    </script>
</body>
</html>