// Função para obter filtros
function getFilters() {
    return {
        startDate: document.getElementById('vencimento-start-date')?.value || '',
        endDate: document.getElementById('vencimento-end-date')?.value || '',
        supplier: document.getElementById('vencimento-supplier-filter')?.value || '',
