// Função para carregar reagentes vencidos
async function loadExpiredReagents(page = 1) {
    const filters = getFilters();
    const expiredReagentsTable = document.getElementById('expired-reagents-table');
    
    const queryParams = new URLSearchParams({
        page: page,
        limit: 15,
        ...filters
    });

    // Mostrar loading
    if (expiredReagentsTable) {
        expiredReagentsTable.innerHTML = `
            <tr>
                <td colspan="7" class="px-6 py-8 text-center text-gray-500">
                    <div class="loading mx-auto" style="width: 30px; height: 30px;"></div>
                    <div class="mt-3 text-sm">Carregando reagentes vencidos...</div>
                </td>
            </tr>
        `;
    }

    try {
        const response = await fetch(`/api/relatorios/reagentes-vencidos?${queryParams}`);
        
        if (!response.ok) {
            throw new Error('Erro na resposta da API');
        }
        
        const data = await response.json();
        
        if (data.success) {
            currentExpiredReagentsData = data.data;
            renderExpiredReagents(data.data);
            updateExpiredCounts(data.data.length, data.total);
        } else {
            throw new Error(data.error || 'Erro desconhecido');
        }
    } catch (error) {
        console.error('Erro ao carregar reagentes vencidos:', error);
        showToast('Erro ao carregar reagentes vencidos', 'danger');
        
        if (expiredReagentsTable) {
            expiredReagentsTable.innerHTML = `
                <tr>
                    <td colspan="7" class="px-6 py-8 text-center text-gray-500">
                        <i class="fas fa-exclamation-triangle text-red-500 text-2xl mb-3"></i>
                        <div>Erro ao carregar dados</div>
                        <div class="text-sm mt-1">Tente recarregar a página</div>
                    </td>
                </tr>
            `;
        }
    }
}

// Função para renderizar tabela de reagentes vencidos
function renderExpiredReagents(reagents) {
    const expiredReagentsTable = document.getElementById('expired-reagents-table');
    if (!expiredReagentsTable) return;
    
    if (reagents.length === 0) {
        expiredReagentsTable.innerHTML = `
            <tr>
                <td colspan="7" class="px-6 py-8 text-center text-gray-500">
                    <i class="fas fa-check-circle text-green-500 text-2xl mb-3"></i>
                    <div>Nenhum reagente vencido encontrado</div>
                    <div class="text-sm mt-1">Tente ajustar os filtros</div>
                </td>
            </tr>
        `;
        return;
    }

    expiredReagentsTable.innerHTML = reagents.map(reagent => `
        <tr class="border-b hover:bg-gray-50 transition-colors duration-200">
            <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900">${escapeHtml(reagent.nome || 'N/A')}</div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-500">${escapeHtml(reagent.tipo || 'N/A')}</div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-500">${escapeHtml(reagent.fornecedor || 'N/A')}</div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-500">${formatDate(reagent.data_aquisicao)}</div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-red-600">${formatDate(reagent.data_validade)}</div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-500">${reagent.quantidade || 0} ${reagent.unidade_medida || ''}</div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                    ${reagent.dias_vencido > 30 ? 'bg-red-100 text-red-800' : 
                      reagent.dias_vencido > 7 ? 'bg-orange-100 text-orange-800' : 
                      'bg-yellow-100 text-yellow-800'}">
                    ${escapeHtml(reagent.status || 'Vencido')}
                </span>
            </td>
        </tr>
    `).join('');
