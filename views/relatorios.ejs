document.addEventListener('DOMContentLoaded', function() {
    console.log('🚀 Inicializando página de relatórios...');

    // Event listeners para reagentes vencidos
    const applyFiltersBtn = document.getElementById('apply-vencimento-filters');
    const clearFiltersBtn = document.getElementById('clear-vencimento-filters');
    const generatePdfBtn = document.getElementById('generate-pdf');
    const exportExcelBtn = document.getElementById('export-excel');

    if (applyFiltersBtn) {
        applyFiltersBtn.addEventListener('click', () => loadExpiredReagents(1));
    }

    if (clearFiltersBtn) {
        clearFiltersBtn.addEventListener('click', () => {
            document.getElementById('vencimento-start-date').value = '';
            document.getElementById('vencimento-end-date').value = '';
            document.getElementById('vencimento-supplier-filter').value = '';
            document.getElementById('vencimento-category-filter').value = '';
            loadExpiredReagents(1);
        });
    }

    if (generatePdfBtn) {
        generatePdfBtn.addEventListener('click', generateExpiredPDF);
    }

    if (exportExcelBtn) {
        exportExcelBtn.addEventListener('click', exportExpiredExcel);
    }

    // Event listeners para gráficos
    const viewMovementBtn = document.getElementById('view-movement-details');
    const viewCategoryBtn = document.getElementById('view-category-details');

    if (viewMovementBtn) {
        viewMovementBtn.addEventListener('click', () => {
            window.location.href = '/movimentacoes';
        });
    }

    if (viewCategoryBtn) {
        viewCategoryBtn.addEventListener('click', () => {
            window.location.href = '/relatorios/categorias';
        });
    }

    // Event listeners para modal
    const viewAllLowStockBtn = document.getElementById('view-all-low-stock');
    const viewAllSummaryBtn = document.getElementById('view-all-summary');
    const closeModalBtn = document.getElementById('closeModal');
    const closeModalBtn2 = document.getElementById('closeModalBtn');

    if (viewAllLowStockBtn) viewAllLowStockBtn.addEventListener('click', openCriticalStockModal);
    if (viewAllSummaryBtn) viewAllSummaryBtn.addEventListener('click', openCriticalStockModal);
    if (closeModalBtn) closeModalBtn.addEventListener('click', closeCriticalStockModal);
    if (closeModalBtn2) closeModalBtn2.addEventListener('click', closeCriticalStockModal);

    // Fechar modal ao clicar fora
    window.addEventListener('click', function(event) {
        const modal = document.getElementById('criticalStockModal');
        if (event.target === modal) {
            closeCriticalStockModal();
        }
    });

    // Fechar modal com ESC
    document.addEventListener('keydown', function(event) {
        if (event.key === 'Escape') {
            closeCriticalStockModal();
        }
    });

    // Formulário de filtros
    const filterForm = document.getElementById('report-filter-form');
    if (filterForm) {
        filterForm.addEventListener('submit', async function(event) {
            event.preventDefault();
            showToast('Filtros aplicados com sucesso!');
            await initCharts();
        });
    }

    // Carregar dados iniciais
    loadExpiredReagents(1);
    loadRealTimeStats();
    initCharts();

    // Atualizar estatísticas a cada 30 segundos
    setInterval(loadRealTimeStats, 30000);

    console.log('✅ Página de relatórios inicializada com sucesso!');
});

