            showToast('Arquivo exportado com sucesso!', 'success');
        } else {
            throw new Error(data.error || 'Erro ao exportar');
        }
    } catch (error) {
        console.error('Erro ao exportar Excel:', error);
        showToast('Erro ao exportar arquivo. Tente novamente.', 'danger');
    }
