// Função para gerar PDF de reagentes vencidos
async function generateExpiredPDF() {
    if (currentExpiredReagentsData.length === 0) {
        showToast('Não há reagentes vencidos para gerar o relatório PDF.', 'warning');
        return;
    }

    const generatePdfBtn = document.getElementById('generate-pdf');
    const originalText = generatePdfBtn.innerHTML;
    
    // Mostrar loading
    generatePdfBtn.innerHTML = '<div class="loading"></div> Gerando PDF...';
    generatePdfBtn.disabled = true;

    try {
        const filters = getFilters();
        const queryParams = new URLSearchParams(filters);
        
        const response = await fetch(`/api/relatorios/gerar-pdf-vencidos?${queryParams}`);
        const data = await response.json();
        
        if (data.success) {
            // Criar PDF localmente como fallback
            const doc = new jsPDF();
            
            // Cabeçalho
            doc.setFontSize(20);
            doc.setTextColor(40, 40, 40);
            doc.text('RELATÓRIO DE REAGENTES VENCIDOS', 105, 20, { align: 'center' });

            // Informações
            doc.setFontSize(10);
            doc.setTextColor(100, 100, 100);
            doc.text(`Data de geração: ${new Date().toLocaleDateString('pt-BR')}`, 14, 35);
            doc.text(`Total de reagentes vencidos: ${currentExpiredReagentsData.length}`, 14, 42);

            // Preparar dados da tabela
            const tableData = currentExpiredReagentsData.map(reagent => [
                reagent.nome || 'N/A',
                reagent.tipo || 'N/A',
                reagent.fornecedor || 'N/A',
                formatDate(reagent.data_aquisicao),
                formatDate(reagent.data_validade),
                `${reagent.quantidade || 0} ${reagent.unidade_medida || ''}`,
                reagent.status || 'Vencido'
            ]);

            // Adicionar tabela
            doc.autoTable({
                startY: 55,
                head: [['Reagente', 'Categoria', 'Fornecedor', 'Aquisição', 'Vencimento', 'Quantidade', 'Status']],
                body: tableData,
                theme: 'grid',
                styles: { fontSize: 8 },
                headStyles: { fillColor: [220, 53, 69] },
                columnStyles: {
                    0: { cellWidth: 35 },
                    1: { cellWidth: 25 },
                    2: { cellWidth: 25 },
                    3: { cellWidth: 20 },
                    4: { cellWidth: 20 },
                    5: { cellWidth: 20 },
                    6: { cellWidth: 25 }
                }
            });

            // Salvar PDF
            doc.save(`relatorio_reagentes_vencidos_${new Date().toISOString().split('T')[0]}.pdf`);
            showToast('PDF gerado com sucesso!', 'success');
            
        } else {
            throw new Error(data.error || 'Erro ao gerar PDF');
        }
    } catch (error) {
        console.error('Erro ao gerar PDF:', error);
        showToast('Erro ao gerar PDF. Tente novamente.', 'danger');
    } finally {
        // Restaurar botão
        generatePdfBtn.innerHTML = originalText;
        generatePdfBtn.disabled = false;
    }
}

// Função para exportar Excel
async function exportExpiredExcel() {
    if (currentExpiredReagentsData.length === 0) {
        showToast('Não há reagentes vencidos para exportar.', 'warning');
        return;
    }

    try {
        const filters = getFilters();
        const queryParams = new URLSearchParams(filters);
        
        const response = await fetch(`/api/relatorios/exportar-vencidos-excel?${queryParams}`);
        const data = await response.json();
        
        if (data.success) {
            // Criar CSV como fallback
            const headers = ['Reagente', 'Categoria', 'Fornecedor', 'Data de Aquisição', 'Data de Vencimento', 'Quantidade', 'Status', 'Dias Vencido'];
            const csvContent = [
                headers.join(','),
                ...currentExpiredReagentsData.map(reagent => [
                    `"${reagent.nome || ''}"`,
                    `"${reagent.tipo || ''}"`,
                    `"${reagent.fornecedor || ''}"`,
                    `"${formatDate(reagent.data_aquisicao)}"`,
                    `"${formatDate(reagent.data_validade)}"`,
                    `"${reagent.quantidade || 0} ${reagent.unidade_medida || ''}"`,
                    `"${reagent.status || 'Vencido'}"`,
                    `"${reagent.dias_vencido || 0}"`
                ].join(','))
            ].join('\n');

            // Baixar arquivo
            const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
            const link = document.createElement('a');
            const url = URL.createObjectURL(blob);
            
            link.setAttribute('href', url);
            link.setAttribute('download', `reagentes_vencidos_${new Date().toISOString().split('T')[0]}.csv`);
