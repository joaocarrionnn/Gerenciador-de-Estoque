<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recuperar Senha - Sistema de Estoque</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="icon" href="/imgs/icon-quimica.jpg" type="image/jpeg">

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#225c96',
                        secondary: '#6b7280',
                        accent: '#225c96',
                        light: '#f3f4f6',
                        dark: '#1e293b'
                    }
                }
            }
        }
    </script>
    <style>
        .bg-custom-gradient {
            background: linear-gradient(135deg, #e5e7eb 0%, #d1d5db 100%);
        }
        @media (max-width: 768px) {
            .form-columns {
                grid-template-columns: 1fr !important;
            }
        }
        .password-strength {
            height: 5px;
            margin-top: 5px;
            border-radius: 3px;
            transition: all 0.3s ease;
        }
    </style>
</head>
<body class="bg-custom-gradient min-h-screen flex items-center justify-center p-4">
    <div class="bg-white rounded-xl shadow-2xl overflow-hidden w-full max-w-3xl">
        <!-- Cabeçalho -->
        <div class="bg-primary text-white p-6 text-center">
            <div class="flex justify-center mb-3">
                <i class="fas fa-key text-4xl"></i>
            </div>
            <h1 class="text-2xl font-bold">Recuperação de Senha</h1>
            <p class="text-sm mt-1">Verifique sua identidade para redefinir sua senha</p>
        </div>
        
        <!-- Mensagens de status -->
        <div id="message-container">
            <% if (typeof success !== 'undefined' && success) { %>
                <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mx-6 mt-4" role="alert">
                    <p class="font-bold">Sucesso!</p>
                    <p><%= success %></p>
                </div>
            <% } %>
            
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mx-6 mt-4" role="alert">
                    <p class="font-bold">Erro</p>
                    <p><%= error %></p>
                </div>
            <% } %>
        </div>

        <!-- Formulário de Recuperação de Senha -->
        <div class="p-6">
            <form action="/recuperar-senha" method="POST" class="space-y-4" id="recoveryForm">
                <!-- Etapa 1: Verificação de Identidade -->
                <div id="step-1">
                    <p class="text-sm text-gray-600 mb-4">Para sua segurança, precisamos verificar sua identidade antes de redefinir sua senha.</p>
                    
                    <div class="form-columns grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-gray-700 text-sm font-medium mb-2" for="usuario">
                                Usuário
                            </label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <i class="fas fa-user-circle text-gray-400"></i>
                                </div>
                                <input class="pl-10 w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" 
                                       id="usuario" name="usuario" type="text" placeholder="Seu nome de usuário" required>
                            </div>
                        </div>

                        <div>
                            <label class="block text-gray-700 text-sm font-medium mb-2" for="cpf">
                                CPF
                            </label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <i class="fas fa-id-card text-gray-400"></i>
                                </div>
                                <input class="pl-10 w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" 
                                       id="cpf" name="cpf" type="text" placeholder="000.000.000-00" required>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <label class="block text-gray-700 text-sm font-medium mb-2" for="palavraChave">
                            Palavra-Chave
                        </label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-key text-gray-400"></i>
                            </div>
                            <input class="pl-10 w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" 
                                   id="palavraChave" name="palavraChave" type="password" placeholder="Sua palavra-chave secreta" required>
                        </div>
                    </div>

                    <button type="button" id="verify-btn" class="w-full bg-primary hover:bg-blue-800 text-white font-medium py-3 px-4 rounded-lg transition duration-300 transform hover:-translate-y-1 mt-6">
                        <i class="fas fa-shield-alt mr-2"></i>
                        Verificar Identidade
                    </button>
                </div>

                <!-- Etapa 2: Nova Senha (inicialmente oculta) -->
                <div id="step-2" class="hidden">
                    <p class="text-sm text-green-600 mb-4"><i class="fas fa-check-circle mr-2"></i>Identidade verificada com sucesso! Agora defina sua nova senha.</p>
                    
                    <div class="mb-4">
                        <label class="block text-gray-700 text-sm font-medium mb-2" for="novaSenha">
                            Nova Senha
                        </label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-lock text-gray-400"></i>
                            </div>
                            <input class="pl-10 w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" 
                                   id="novaSenha" name="novaSenha" type="password" placeholder="Digite sua nova senha" required>
                            <div class="absolute inset-y-0 right-0 pr-3 flex items-center cursor-pointer" id="toggleNovaSenha">
                                <i class="fas fa-eye text-gray-400"></i>
                            </div>
                        </div>
                        <div class="password-strength bg-gray-200 mt-1" id="passwordStrength"></div>
                        <p class="text-xs text-gray-500 mt-1" id="passwordFeedback">Força da senha: </p>
                    </div>

                    <div class="mb-4">
                        <label class="block text-gray-700 text-sm font-medium mb-2" for="confirmarSenha">
                            Confirmar Nova Senha
                        </label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-lock text-gray-400"></i>
                            </div>
                            <input class="pl-10 w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" 
                                   id="confirmarSenha" name="confirmarSenha" type="password" placeholder="Confirme sua nova senha" required>
                            <div class="absolute inset-y-0 right-0 pr-3 flex items-center cursor-pointer" id="toggleConfirmarSenha">
                                <i class="fas fa-eye text-gray-400"></i>
                            </div>
                        </div>
                        <p class="text-xs text-red-500 mt-1 hidden" id="passwordMismatch">As senhas não coincidem.</p>
                    </div>

                    <button type="submit" class="w-full bg-primary hover:bg-blue-800 text-white font-medium py-3 px-4 rounded-lg transition duration-300 transform hover:-translate-y-1 mt-2">
                        <i class="fas fa-sync-alt mr-2"></i>
                        Redefinir Senha
                    </button>
                </div>
            </form>
            
            <!-- Link para voltar ao login -->
            <div class="mt-6 text-center">
                <p class="text-sm text-gray-600">
                    Lembrou sua senha? 
                    <a href="/login" class="font-medium text-primary hover:underline">Fazer login</a>
                </p>
            </div>
        </div>
        
        <!-- Rodapé -->
        <div class="bg-gray-100 p-4 text-center text-xs text-gray-600">
            <p>&copy; 2025 Triple J. Todos os direitos reservados.</p>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Elementos do DOM
            const step1 = document.getElementById('step-1');
            const step2 = document.getElementById('step-2');
            const verifyBtn = document.getElementById('verify-btn');
            const recoveryForm = document.getElementById('recoveryForm');
            const cpfInput = document.getElementById('cpf');
            const toggleNovaSenha = document.getElementById('toggleNovaSenha');
            const toggleConfirmarSenha = document.getElementById('toggleConfirmarSenha');
            const novaSenhaInput = document.getElementById('novaSenha');
            const confirmarSenhaInput = document.getElementById('confirmarSenha');
            const passwordMismatch = document.getElementById('passwordMismatch');
            const passwordStrength = document.getElementById('passwordStrength');
            const passwordFeedback = document.getElementById('passwordFeedback');

            // Formatação automática do CPF
            cpfInput.addEventListener('input', function(e) {
                let value = e.target.value.replace(/\D/g, '');
                if (value.length > 11) value = value.slice(0, 11);
                
                if (value.length > 9) {
                    value = value.replace(/(\d{3})(\d{3})(\d{3})(\d{2})/, '$1.$2.$3-$4');
                } else if (value.length > 6) {
                    value = value.replace(/(\d{3})(\d{3})(\d+)/, '$1.$2.$3');
                } else if (value.length > 3) {
                    value = value.replace(/(\d{3})(\d+)/, '$1.$2');
                }
                
                e.target.value = value;
            });

            // Verificação de identidade (simulação)
            verifyBtn.addEventListener('click', function() {
                const usuario = document.getElementById('usuario').value;
                const cpf = document.getElementById('cpf').value;
                const palavraChave = document.getElementById('palavraChave').value;
                
                if (!usuario || !cpf || !palavraChave) {
                    alert('Por favor, preencha todos os campos de verificação.');
                    return;
                }
                
                // Simulação de verificação bem-sucedida
                // Em um sistema real, isso seria uma requisição ao servidor
                setTimeout(function() {
                    step1.classList.add('hidden');
                    step2.classList.remove('hidden');
                }, 800);
            });

            // Alternar visibilidade da senha
            toggleNovaSenha.addEventListener('click', function() {
                const type = novaSenhaInput.getAttribute('type') === 'password' ? 'text' : 'password';
                novaSenhaInput.setAttribute('type', type);
                toggleNovaSenha.innerHTML = type === 'password' ? '<i class="fas fa-eye text-gray-400"></i>' : '<i class="fas fa-eye-slash text-gray-400"></i>';
            });

            toggleConfirmarSenha.addEventListener('click', function() {
                const type = confirmarSenhaInput.getAttribute('type') === 'password' ? 'text' : 'password';
                confirmarSenhaInput.setAttribute('type', type);
                toggleConfirmarSenha.innerHTML = type === 'password' ? '<i class="fas fa-eye text-gray-400"></i>' : '<i class="fas fa-eye-slash text-gray-400"></i>';
            });

            // Verificar se as senhas coincidem
            confirmarSenhaInput.addEventListener('input', function() {
                if (novaSenhaInput.value !== confirmarSenhaInput.value) {
                    passwordMismatch.classList.remove('hidden');
                } else {
                    passwordMismatch.classList.add('hidden');
                }
            });

            // Verificar força da senha
            novaSenhaInput.addEventListener('input', function() {
                const password = novaSenhaInput.value;
                let strength = 0;
                let feedback = '';

                // Verificar comprimento
                if (password.length > 7) strength += 20;
                
                // Verificar letras minúsculas e maiúsculas
                if (password.match(/[a-z]/)) strength += 20;
                if (password.match(/[A-Z]/)) strength += 20;
                
                // Verificar números
                if (password.match(/\d/)) strength += 20;
                
                // Verificar caracteres especiais
                if (password.match(/[^a-zA-Z\d]/)) strength += 20;

                // Atualizar barra de força
                passwordStrength.style.width = strength + '%';
                
                // Atualizar feedback
                if (strength < 40) {
                    passwordStrength.style.backgroundColor = '#e53e3e';
                    feedback = 'Fraca';
                } else if (strength < 80) {
                    passwordStrength.style.backgroundColor = '#ed8936';
                    feedback = 'Média';
                } else {
                    passwordStrength.style.backgroundColor = '#38a169';
                    feedback = 'Forte';
                }
                
                passwordFeedback.textContent = 'Força da senha: ' + feedback;
            });

            // Validação final do formulário
            recoveryForm.addEventListener('submit', function(event) {
                const novaSenha = novaSenhaInput.value;
                const confirmarSenha = confirmarSenhaInput.value;
                
                if (novaSenha !== confirmarSenha) {
                    event.preventDefault();
                    passwordMismatch.classList.remove('hidden');
                    alert('As senhas não coincidem. Por favor, verifique.');
                    return;
                }
                
                if (novaSenha.length < 8) {
                    event.preventDefault();
                    alert('A senha deve ter pelo menos 8 caracteres.');
                    return;
                }
                
                // Em um sistema real, aqui seria feita a submissão do formulário
                alert('Senha redefinida com sucesso! Você será redirecionado para a página de login.');
            });
        });
    </script>
</body>
</html>