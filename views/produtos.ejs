<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <%- include('./partials/head'); %>
    <style>
        /* Mantenha todos os estilos existentes e adicione estes: */
        
        .search-container {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            padding: 1.25rem 1.5rem;
            margin-bottom: 1.5rem;
        }
        
        .search-form {
            display: flex;
            gap: 1rem;
            align-items: flex-end;
        }
        
        .search-group {
            flex: 1;
        }
        
        .search-label {
            font-weight: 500;
            color: #4a5568;
            margin-bottom: 0.5rem;
            display: block;
        }
        
        .search-input {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 1px solid #e2e8f0;
            border-radius: 8px;
            font-size: 1rem;
            transition: all 0.2s ease;
        }
        
        .search-input:focus {
            outline: none;
            border-color: #4361ee;
            box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.15);
        }
        
        .search-btn {
            background-color: #2c3e50;
            color: white;
            border: none;
            border-radius: 8px;
            padding: 0.75rem 1.5rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .search-btn:hover {
            background-color: rgb(62, 75, 87);
            transform: translateY(-2px);
        }
        
        .table-scroll-container {
            max-height: 600px;
            overflow-y: auto;
            border: 1px solid #e2e8f0;
            border-radius: 8px;
        }
        
        .reagent-table {
            width: 100%;
            border-collapse: collapse;
            min-width: 1200px; /* Largura mínima para garantir que todas as colunas caibam */
        }
        
        .reagent-table th {
            background-color: #f8f9fa;
            padding: 1rem;
            font-weight: 600;
            color: #495057;
            text-transform: uppercase;
            font-size: 0.8rem;
            letter-spacing: 0.5px;
            text-align: left;
            position: sticky;
            top: 0;
            z-index: 10;
        }
        
        .reagent-table td {
            padding: 1rem;
            border-bottom: 1px solid #f1f3f4;
            transition: background-color 0.2s ease;
        }
        
        .reagent-table tr:hover td {
            background-color: #f8f9fa;
        }
        
        /* Estilos para informações adicionais */
        .reagent-details-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 0.5rem;
            margin-top: 0.5rem;
        }
        
        .detail-item {
            font-size: 0.8rem;
            color: #6c757d;
        }
        
        .detail-label {
            font-weight: 600;
            color: #495057;
        }
        
        .danger-level {
            padding: 0.25rem 0.5rem;
            border-radius: 4px;
            font-size: 0.75rem;
            font-weight: 500;
        }
        
        .danger-baixo { background: rgba(40, 167, 69, 0.15); color: #28a745; }
        .danger-moderado { background: rgba(255, 193, 7, 0.15); color: #ffc107; }
        .danger-alto { background: rgba(253, 126, 20, 0.15); color: #fd7e14; }
        .danger-extremo { background: rgba(220, 53, 69, 0.15); color: #dc3545; }
        
        .no-results {
            text-align: center;
            padding: 3rem;
            color: #6c757d;
        }
        
        .no-results i {
            font-size: 3rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }
        
        /* Mantenha todos os outros estilos existentes */
        :root {
            --primary: #2d3748;
            --secondary: #2d3748;
            --success: #2d3748;
            --warning: #2d3748;
            --info: #2d3748;
            --light: #f8f9fa;
            --dark: #212529;
            --gray: #6c757d;
            --light-gray: #e9ecef;
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', sans-serif;
        }
        
        body {
            background-color: #f5f7fb;
            color: #333;
            min-height: 100vh;
        }
        
        .flex {
            display: flex;
        }
        
        .flex-1 {
            flex: 1;
        }
        
        .overflow-auto {
            overflow: auto;
        }
        
        .min-h-screen {
            min-height: 100vh;
        }
        
        .main-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 1.5rem;
        }
        
        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
        }
        
        .section-title {
            font-size: 1.75rem;
            font-weight: 700;
            color: #2d3748;
        }
        
        .table-container {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            overflow: hidden;
            margin-bottom: 2rem;
        }
        
        .table-header {
            padding: 1.25rem 1.5rem;
            border-bottom: 1px solid #e2e8f0;
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        }
        
        .table-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: #2d3748;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .text-left { text-align: left; }
        .text-center { text-align: center; }
        
        .reagent-info {
            display: flex;
            flex-direction: column;
        }
        
        .reagent-name {
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 0.2rem;
        }
        
        .quantity-display {
            font-weight: 500;
            color: #495057;
            padding: 0.4rem 0.8rem;
            border-radius: 20px;
            background: #f8f9fa;
            display: inline-block;
        }
        
        .warning-quantity {
            background: rgba(255, 193, 7, 0.15);
            color: #fd7e14;
            font-weight: 600;
        }
        
        .status-badge {
            padding: 0.5rem 0.8rem;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            gap: 0.4rem;
        }
        
        .status-normal {
            background: rgba(40, 167, 69, 0.15);
            color: #28a745;
        }
        
        .status-warning {
            background: rgba(255, 193, 7, 0.15);
            color: #ffc107;
        }
        
        .status-critical {
            background: rgba(220, 53, 69, 0.15);
            color: #dc3545;
            font-weight: 600;
        }
        
        .action-buttons {
            display: flex;
            justify-content: center;
            gap: 0.5rem;
        }
        
        .btn-action {
            width: 34px;
            height: 34px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            border: none;
            cursor: pointer;
            transition: all 0.2s ease;
        }
        
        .btn-edit {
            background: rgba(23, 162, 184, 0.1);
            color: #17a2b8;
        }
        
        .btn-edit:hover {
            background: #17a2b8;
            color: white;
        }
        
        .btn-delete {
            background: rgba(220, 53, 69, 0.1);
            color: #dc3545;
        }
        
        .btn-delete:hover {
            background: #dc3545;
            color: white;
        }
        
        .table-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 1.5rem;
            background: #f8f9fa;
            border-top: 1px solid #dee2e6;
        }
        
        .summary-text {
            font-size: 0.9rem;
            color: #6c757d;
            display: flex;
            align-items: center;
            gap: 0.4rem;
        }
        
        .view-all-btn {
            background: transparent;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            padding: 0.6rem 1.2rem;
            font-size: 0.9rem;
            color: var(--primary);
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            text-decoration: none;
        }
        
        .view-all-btn:hover {
            background: var(--primary);
            color: white;
            border-color: var(--primary);
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(67, 97, 238, 0.2);
        }
        
        .primary-btn {
            background-color: #2c3e50;
            color: #ffffff;
            border: none;
            border-radius: 8px;
            padding: 14px 26px;
            font-size: 15px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            display: inline-flex;
            align-items: center;
            gap: 10px;
            text-decoration: none;
            position: relative;
            overflow: hidden;
        }
        
        .primary-btn:hover {
            background-color: rgb(62, 75, 87);
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }
        
        .button-container {
            padding: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        
        @media (max-width: 768px) {
            .main-container {
                padding: 1rem;
            }
            
            .section-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 1rem;
            }
            
            .search-form {
                flex-direction: column;
                align-items: stretch;
            }
            
            .table-header {
                flex-direction: column;
                gap: 1rem;
                align-items: flex-start;
            }
            
            .action-buttons {
                flex-direction: column;
            }
            
            .table-footer {
                flex-direction: column;
                gap: 1rem;
                align-items: flex-start;
            }
            
            .view-all-btn {
                align-self: flex-end;
            }
        }
    </style>
</head>
<body class="flex">
    <%- include('./partials/header'); %>
    
    <!-- Conteúdo Principal -->
    <main class="flex-1 overflow-auto bg-gray-50 min-h-screen">
        <div class="main-container">
            <!-- Header da Página -->
            <div class="section-header">
                <h1 class="section-title">Gerenciamento de Produtos</h1>
                <div class="button-container">
                    <a href="/produtos/adicionar" class="primary-btn">
                        <i class="fas fa-plus-circle"></i> Adicionar Produto
                    </a>
                </div>
            </div>
            
            <!-- Barra de Pesquisa -->
            <div class="search-container">
                <form id="searchForm" class="search-form" method="GET" action="/produtos">
                    <div class="search-group">
                        <label class="search-label" for="searchTerm">Pesquisar Produto</label>
                        <input type="text" class="search-input" id="searchTerm" name="search" 
                               placeholder="Digite ID, nome ou categoria..." 
                               value="<%= searchTerm || '' %>">
                    </div>
                    <button type="submit" class="search-btn">
                        <i class="fas fa-search"></i> Pesquisar
                    </button>
                    <% if (searchTerm) { %>
                        <a href="/produtos" class="search-btn" style="background-color: #6c757d;">
                            <i class="fas fa-times"></i> Limpar
                        </a>
                    <% } %>
                </form>
            </div>

            <!-- Tabela de Produtos -->
            <div class="table-container">
                <div class="table-header">
                    <h2 class="table-title">
                        <i class="fas fa-flask"></i>
                        Produtos em Estoque
                    </h2>
                    <span class="summary-text">
                        <i class="fas fa-filter"></i>
                        <% if (searchTerm) { %>
                            Filtrado por: "<%= searchTerm %>"
                        <% } else { %>
                            Todos os produtos
                        <% } %>
                    </span>
                </div>
                
                <div class="table-scroll-container">
                    <table class="reagent-table">
                        <thead>
                            <tr>
                                <th class="text-left">ID</th>
                                <th class="text-left">Nome do Produto</th>
                                <th class="text-left">Categoria</th>
                                <th class="text-left">Grau de Periculosidade</th>
                                <th class="text-left">Órgão Regulador</th>
                                <th class="text-center">Quantidade</th>
                                <th class="text-center">Estoque Mínimo</th>
                                <th class="text-left">Localização</th>
                                <th class="text-center">Status</th>
                                <th class="text-center">Disponível</th>
                                <th class="text-center">Fornecedor</th>
                                <th class="text-center">Data Aquisição</th>
                                <th class="text-center">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (produtos && produtos.length > 0) { %>
                                <% produtos.forEach(produto => { %>
                                    <tr>
                                        <td><strong>#<%= produto.id_produto %></strong></td>
                                        <td>
                                            <div class="reagent-info">
                                                <div class="reagent-name"><%= produto.nome %></div>
                                                <% if (produto.descricao) { %>
                                                    <div class="reagent-details"><%= produto.descricao %></div>
                                                <% } %>
                                                <% if (produto.instrucoes_seguranca) { %>
                                                    <div class="reagent-details-grid">
                                                        <div class="detail-item">
                                                            <span class="detail-label">Segurança:</span> 
                                                            <%= produto.instrucoes_seguranca %>
                                                        </div>
                                                    </div>
                                                <% } %>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="status-badge status-normal">
                                                <%= produto.tipo %>
                                            </span>
                                        </td>
                                        <td>
                                            <% if (produto.grau_periculosidade) { 
                                                let dangerClass = 'danger-baixo';
                                                if (produto.grau_periculosidade === 'moderado') dangerClass = 'danger-moderado';
                                                if (produto.grau_periculosidade === 'alto') dangerClass = 'danger-alto';
                                                if (produto.grau_periculosidade === 'extremo') dangerClass = 'danger-extremo';
                                            %>
                                                <span class="danger-level <%= dangerClass %>">
                                                    <%= produto.grau_periculosidade %>
                                                </span>
                                            <% } else { %>
                                                <span class="detail-item">Não informado</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <span class="detail-item">
                                                <%= produto.orgao_regulador || 'Não informado' %>
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <div class="quantity-display <%= produto.quantidade <= (produto.estoque_minimo || 10) ? 'warning-quantity' : '' %>">
                                                <%= produto.quantidade %> <%= produto.unidade_medida %>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <span class="detail-item">
                                                <%= produto.estoque_minimo || 0 %> <%= produto.unidade_medida %>
                                            </span>
                                        </td>
                                        <td>
                                            <span class="detail-item">
                                                <%= produto.localizacao || 'Não informada' %>
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <% let statusClass = 'status-normal';
                                            let statusText = 'Disponível';
                                            let statusIcon = 'fa-check-circle';
                                            
                                            if (produto.quantidade <= (produto.estoque_minimo || 10)) {
                                                statusClass = 'status-warning';
                                                statusText = 'Baixo Estoque';
                                                statusIcon = 'fa-exclamation-triangle';
                                            }
                                            
                                            if (produto.quantidade === 0) {
                                                statusClass = 'status-critical';
                                                statusText = 'Esgotado';
                                                statusIcon = 'fa-times-circle';
                                            }
                                            %>
                                            <span class="status-badge <%= statusClass %>">
                                                <i class="fas <%= statusIcon %>"></i> <%= statusText %>
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <span class="status-badge <%= produto.disponivel ? 'status-normal' : 'status-critical' %>">
                                                <i class="fas <%= produto.disponivel ? 'fa-check' : 'fa-times' %>"></i>
                                                <%= produto.disponivel ? 'Sim' : 'Não' %>
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <span class="detail-item">
                                                <%= produto.fornecedor || 'Não informado' %>
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <span class="detail-item">
                                                <% if (produto.data_aquisicao) { %>
                                                    <%= new Date(produto.data_aquisicao).toLocaleDateString('pt-BR') %>
                                                <% } else { %>
                                                    Não informada
                                                <% } %>
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <div class="action-buttons">
                                                <button class="btn-action btn-edit" title="Editar" onclick="editarProduto(<%= produto.id_produto %>)">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <form action="/produtos/deletar/<%= produto.id_produto %>" method="POST" style="display: inline;">
                                                    <button type="button" class="btn-action btn-delete" title="Excluir" onclick="confirmarExclusao(this)">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="13" class="no-results">
                                        <i class="fas fa-search"></i>
                                        <h3>Nenhum produto encontrado</h3>
                                        <p><%= searchTerm ? 'Tente ajustar os termos da pesquisa.' : 'Adicione o primeiro produto!' %></p>
                                        <% if (searchTerm) { %>
                                            <a href="/produtos" class="primary-btn" style="margin-top: 1rem;">
                                                <i class="fas fa-list"></i> Ver todos os produtos
                                            </a>
                                        <% } %>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
                
                <div class="table-footer">
                    <span class="summary-text">
                        <i class="fas fa-database"></i> 
                        Total de <%= produtos ? produtos.length : 0 %> produtos 
                        <% if (searchTerm) { %>encontrados<% } else { %>listados<% } %>
                    </span>
                    <% if (!searchTerm && produtos && produtos.length > 5) { %>
                        <a href="#top" class="view-all-btn">
                            <i class="fas fa-arrow-up"></i> Voltar ao Topo
                        </a>
                    <% } %>
                </div>
            </div>
        </div>
    </main>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Adicionar interatividade aos botões de ação
            const actionButtons = document.querySelectorAll('.btn-action');
            actionButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const action = this.classList.contains('btn-edit') ? 'editar' : 'excluir';
                    const productName = this.closest('tr').querySelector('.reagent-name').textContent;
                    console.log(`Ação: ${action} no produto: ${productName}`);
                });
            });

            // Foco no campo de pesquisa
            const searchInput = document.getElementById('searchTerm');
            if (searchInput && !searchInput.value) {
                searchInput.focus();
            }
        });

        function confirmarExclusao(button) {
            const productName = button.closest('tr').querySelector('.reagent-name').textContent;
            if (confirm(`Tem certeza que deseja excluir o produto "${productName}"? Esta ação não pode ser desfeita.`)) {
                button.closest('form').submit();
            }
        }

        function editarProduto(id) {
            window.location.href = `/produtos/editar/${id}`;
        }

        // Função para busca em tempo real (opcional)
        function setupRealTimeSearch() {
            const searchInput = document.getElementById('searchTerm');
            if (searchInput) {
                let searchTimeout;
                
                searchInput.addEventListener('input', function() {
                    clearTimeout(searchTimeout);
                    searchTimeout = setTimeout(() => {
                        if (this.value.length >= 3 || this.value.length === 0) {
                            document.getElementById('searchForm').submit();
                        }
                    }, 500);
                });
            }
        }

        // Descomente a linha abaixo se quiser busca em tempo real
        // setupRealTimeSearch();
    </script>
</body>
</html>