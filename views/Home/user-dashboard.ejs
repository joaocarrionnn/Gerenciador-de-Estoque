<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <%- include('../partials/head'); %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
            
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        body {
            background-color: var(--bg-primary);
            color: var(--text-primary);
        }
    
        
        .flex {
            display: flex;
        }
        
        .flex-1 {
            flex: 1;
        }
        
        .overflow-auto {
            overflow: auto;
        }
        
        .min-h-screen {
            min-height: 100vh;
        }
        
        /* Layout principal */
        .main-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 1.5rem;
        }
        
        /* Header da seção */
        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
        }
        
        .section-title {
            font-size: 1.75rem;
            font-weight: 700;
            color: #2d3748;
        }
        
        /* Grid de cards de estatísticas */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }
        
        .stats-card {
            background: white;
            border-radius: 12px;
            padding: 1.5rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.04);
            transition: all 0.3s ease;
            border-left: 4px solid var(--primary);
            display: flex;
            align-items: center;
        }
        
        .stats-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }
        
         
        
        .icon-container {
            width: 60px;
            height: 60px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 1rem;
            flex-shrink: 0;
        }
        
        .blue .icon-container {
            background-color: rgba(67, 97, 238, 0.1);
        }
        
        .green .icon-container {
            background-color: rgba(16, 185, 129, 0.1);
        }
        
        .red .icon-container {
            background-color: rgba(239, 68, 68, 0.1);
        }
        
        .purple .icon-container {
            background-color: rgba(139, 92, 246, 0.1);
        }
        
        .icon-container i {
            font-size: 1.5rem;
        }
        
        .blue .icon-container i {
            color: var(--primary);
        }
        
        .green .icon-container i {
            color: #10b981;
        }
        
        .red .icon-container i {
            color: #ef4444;
        }
        
        .purple .icon-container i {
            color: #8b5cf6;
        }
        
        .card-content {
            flex-grow: 1;
        }
        
        .card-title {
            font-size: 0.875rem;
            color: #718096;
            margin-bottom: 0.25rem;
        }
        
        .card-value {
            font-size: 1.75rem;
            font-weight: 700;
            color: #2d3748;
        }
        
        /* Cards de visualização */
        .view-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.04);
            transition: all 0.3s ease;
            overflow: hidden;
        }
        
        .view-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }
        
        .card-header {
            padding: 1.25rem 1.5rem;
            border-bottom: 1px solid #e2e8f0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .card-title-main {
            font-size: 1.25rem;
            font-weight: 600;
            color: #2d3748;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .btn-view {
            background: transparent;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            padding: 0.6rem 1.2rem;
            font-size: 0.9rem;
            color: var(--primary);
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            text-decoration: none;
        }
        
        .btn-view:hover {
            background: var(--primary);
            color: white;
            border-color: var(--primary);
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(67, 97, 238, 0.2);
        }
        
        .card-body {
            padding: 1.5rem;
        }
        
        .item-card {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 1rem;
            border-left: 4px solid var(--primary);
            transition: all 0.3s ease;
        }
        
        .item-card:hover {
            background: #e9ecef;
            transform: translateX(5px);
        }
        
        .item-card:last-child {
            margin-bottom: 0;
        }
        
        .item-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 0.5rem;
        }
        
        .item-name {
            font-weight: 600;
            color: #2c3e50;
            margin: 0;
        }
        
        .item-badge {
            background: var(--primary);
            color: white;
            padding: 0.3rem 0.6rem;
            border-radius: 12px;
            font-size: 0.8rem;
            font-weight: 500;
        }
        
        .item-details {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 0.5rem;
            font-size: 0.85rem;
            color: #6c757d;
        }
        
        .detail-item {
            display: flex;
            align-items: center;
            gap: 0.3rem;
        }
        
        /* Cards de ação */
        .action-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.04);
            overflow: hidden;
            margin-bottom: 2rem;
        }
        
        .action-header {
            background: linear-gradient(135deg, #17a2b8 0%, #138496 100%);
            color: white;
            padding: 1.25rem 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .action-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
            padding: 1.5rem;
        }
        
        .action-btn {
            background: white;
            border: 2px solid #e9ecef;
            border-radius: 12px;
            padding: 2rem 1rem;
            text-align: center;
            text-decoration: none;
            color: #2c3e50;
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 1rem;
        }
        
        .action-btn:hover {
            border-color: var(--primary);
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }
        
        .action-btn.primary:hover {
            border-color: var(--primary);
            background: rgba(67, 97, 238, 0.05);
        }
        
        .action-btn.success:hover {
            border-color: #28a745;
            background: rgba(40, 167, 69, 0.05);
        }
        
        .action-icon {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
        }
        
        .action-btn.primary .action-icon {
            background: rgba(67, 97, 238, 0.1);
            color: var(--primary);
        }
        
        .action-btn.success .action-icon {
            background: rgba(40, 167, 69, 0.1);
            color: #28a745;
        }
        
        .action-text {
            font-weight: 600;
            margin: 0;
        }
        
        .action-description {
            font-size: 0.85rem;
            color: #6c757d;
            margin: 0;
        }
        
        /* Card de informações */
        .info-card {
            background: white;
            border: 2px solid #ffc107;
            border-radius: 12px;
            overflow: hidden;
        }
        
        .info-header {
            background: #ffc107;
            color: #212529;
            padding: 1.25rem 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-weight: 600;
        }
        
        .info-body {
            padding: 1.5rem;
        }
        
        .permissions-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
        }
        
        .permission-section h6 {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 1rem;
            color: #2c3e50;
        }
        
        .permission-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        
        .permission-list li {
            padding: 0.5rem 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .permission-list .allowed i {
            color: #28a745;
        }
        
        .permission-list .denied i {
            color: #dc3545;
        }
        
        .alert-info {
            background: rgba(23, 162, 184, 0.1);
            border: 1px solid rgba(23, 162, 184, 0.2);
            border-radius: 8px;
            padding: 1rem;
            margin-top: 1rem;
        }
        
        /* Dashboard card de boas-vindas */
        .welcome-card {
            background: linear-gradient(135deg, #324b64 0%, #2c3e50 100%);
            border-radius: 15px;
            color: white;
            padding: 2rem;
            margin-bottom: 2rem;
            position: relative;
            overflow: hidden;
        }
        
        .welcome-card::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 100%;
            height: 200%;
            background: rgba(255, 255, 255, 0.1);
            transform: rotate(45deg);
        }
        
        .welcome-content {
            position: relative;
            z-index: 2;
        }
        
        .welcome-icon {
            position: absolute;
            right: 2rem;
            top: 50%;
            transform: translateY(-50%);
            font-size: 4rem;
            opacity: 0.3;
            z-index: 1;
        }
        
        /* Responsividade */
        @media (max-width: 768px) {
            .main-container {
                padding: 1rem;
            }
            
            .stats-grid {
                grid-template-columns: 1fr;
            }
            
            .action-grid {
                grid-template-columns: 1fr;
            }
            
            .permissions-grid {
                grid-template-columns: 1fr;
            }
            
            .item-details {
                grid-template-columns: 1fr;
            }
            
            .welcome-card {
                text-align: center;
            }
            
            .welcome-icon {
                position: relative;
                right: auto;
                top: auto;
                transform: none;
                margin-top: 1rem;
            }
        }
        
        /* Alertas */
        .alert {
            padding: 12px 16px;
            border-radius: 8px;
            margin-bottom: 16px;
            font-weight: 500;
        }
        
        .alert-success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }
        
        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }
        
        .badge {
            background: #f0f0f0;
            padding: 0.3rem 0.6rem;
            border-radius: 12px;
            font-size: 0.8rem;
            color: #495057;
        }
        
        .warning-badge {
            background-color: #ffc107;
            color: #000;
            padding: 0.25rem 0.5rem;
            border-radius: 4px;
            font-size: 0.75rem;
            margin-top: 0.5rem;
            display: inline-block;
        }
    </style>
</head>
<body class="flex">
    <%- include('../partials/header'); %>
    
    <!-- Conteúdo Principal -->
    <main class="flex-1 overflow-auto bg-gray-50 min-h-screen">
        <div class="main-container">
            <!-- Header da Página -->
            <div class="section-header">
                <h1 class="section-title">Dashboard</h1>
            </div>
            
            <!-- Alertas de sucesso/erro -->
            <% if (typeof success !== 'undefined' && success) { %>
                <div class="alert alert-success">
                    <i class="fas fa-check-circle"></i> <%= success %>
                </div>
            <% } %>
            
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-circle"></i> <%= error %>
                </div>
            <% } %>
            
            <!-- Card de Boas-vindas -->
            <div class="welcome-card">
                <div class="welcome-content">
                    <h2 class="mb-2">
                        <i class="fas fa-user-circle"></i> Olá, <%= user.nome || user.usuario %>!
                    </h2>
                    <p class="mb-1">Bem-vindo ao sistema de visualização de estoque do laboratório</p>
                </div>
                <div class="welcome-icon">
                    <i class="fas fa-search"></i>
                </div>
            </div>
            
            <!-- Estatísticas Rápidas -->
            <div class="stats-grid">
                <div class="stats-card blue">
                    <div class="icon-container">
                        <i class="fas fa-vial"></i>
                    </div>
                    <div class="card-content">
                        <div class="card-title">Reagentes Disponíveis</div>
                        <div class="card-value"><%= stats.total_reagentes || 0 %></div>
                        <% if (stats.reagentes_baixo_estoque > 0) { %>
                            <div class="warning-badge">
                                <i class="fas fa-exclamation-triangle"></i> 
                                <%= stats.reagentes_baixo_estoque %> com estoque baixo
                            </div>
                        <% } %>
                    </div>
                </div>
                
                <div class="stats-card green">
                    <div class="icon-container">
                        <i class="fas fa-glass-whiskey"></i>
                    </div>
                    <div class="card-content">
                        <div class="card-title">Vidrarias Disponíveis</div>
                        <div class="card-value"><%= stats.total_vidrarias || 0 %></div>
                        <% if (stats.vidrarias_baixo_estoque > 0) { %>
                            <div class="warning-badge">
                                <i class="fas fa-exclamation-triangle"></i> 
                                <%= stats.vidrarias_baixo_estoque %> com estoque baixo
                            </div>
                        <% } %>
                    </div>
                </div>
                
                
            </div>

            <!-- Grid de Conteúdo -->
            <div class="charts-grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(450px, 1fr)); gap: 1.5rem; margin-bottom: 2rem;">
                <!-- Reagentes Recentes -->
                <div class="view-card">
                    <div class="card-header">
                        <h2 class="card-title-main">
                            <i class="fas fa-vial"></i>
                            Reagentes Recentes
                        </h2>
                        <a href="/produtos" class="btn-view">Ver Todos</a>
                    </div>
                    
                    <div class="card-body">
                        <% if (recentProducts && recentProducts.length > 0) { %>
                            <% recentProducts.forEach((product, index) => { %>
                                <div class="item-card">
                                    <div class="item-header">
                                        <h3 class="item-name"><%= product.nome %></h3>
                                        <span class="item-badge">Estoque</span>
                                    </div>
                                    <div class="item-details">
                                        <div class="detail-item">
                                            <i class="fas fa-tag"></i>
                                            <span>Tipo: <%= product.tipo %></span>
                                        </div>
                                        <div class="detail-item">
                                            <i class="fas fa-balance-scale"></i>
                                            <span>Quantidade: <%= product.quantidade %> <%= product.unidade_medida %></span>
                                        </div>
                                        <div class="detail-item">
                                            <i class="fas fa-map-marker-alt"></i>
                                            <span>Local: <%= product.localizacao %></span>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div style="padding: 2rem; text-align: center; color: #6c757d;">
                                <i class="fas fa-box-open" style="font-size: 2rem; margin-bottom: 1rem;"></i>
                                <p>Nenhum reagente disponível</p>
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Vidrarias Recentes -->
                <div class="view-card">
                    <div class="card-header">
                        <h2 class="card-title-main">
                            <i class="fas fa-glass-whiskey"></i>
                            Vidrarias Recentes
                        </h2>
                        <a href="/vidracarias" class="btn-view">Ver Todas</a>
                    </div>
                    
                    <div class="card-body">
                        <% if (recentGlassware && recentGlassware.length > 0) { %>
                            <% recentGlassware.forEach((glassware, index) => { %>
                                <div class="item-card">
                                    <div class="item-header">
                                        <h3 class="item-name"><%= glassware.nome %></h3>
                                        <span class="item-badge">Estoque</span>
                                    </div>
                                    <div class="item-details">
                                        <div class="detail-item">
                                            <i class="fas fa-tag"></i>
                                            <span>Categoria: <%= glassware.categoria %></span>
                                        </div>
                                        <div class="detail-item">
                                            <i class="fas fa-weight"></i>
                                            <span>Capacidade: <%= glassware.capacidade %></span>
                                        </div>
                                        <div class="detail-item">
                                            <i class="fas fa-atom"></i>
                                            <span>Material: <%= glassware.material %></span>
                                        </div>
                                        <div class="detail-item">
                                            <i class="fas fa-cubes"></i>
                                            <span>Quantidade: <%= glassware.quantidade %></span>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div style="padding: 2rem; text-align: center; color: #6c757d;">
                                <i class="fas fa-glass-whiskey" style="font-size: 2rem; margin-bottom: 1rem;"></i>
                                <p>Nenhuma vidraria disponível</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script>
        // ===== INICIALIZAÇÃO =====

        // Função principal de inicialização
        function initializeUserDashboard() {
            console.log('🚀 Inicializando dashboard do usuário...');
            
            // Inicializar efeitos visuais
            initializeCardEffects();
            
            console.log('✅ Dashboard do usuário inicializado com sucesso');
        }

        // ===== EFEITOS VISUAIS =====

        // Adicionar efeitos de hover nos cards
        function initializeCardEffects() {
            const cards = document.querySelectorAll('.stats-card, .view-card, .action-btn');
            cards.forEach(card => {
                card.addEventListener('mouseenter', () => {
                    card.style.transform = 'translateY(-5px)';
                    card.style.boxShadow = '0 10px 25px rgba(0, 0, 0, 0.1)';
                    card.style.transition = 'all 0.3s ease';
                });
                
                card.addEventListener('mouseleave', () => {
                    card.style.transform = 'translateY(0)';
                    card.style.boxShadow = '0 4px 6px rgba(0, 0, 0, 0.04)';
                });
            });
        }

        // ===== EVENT LISTENERS =====

        // Inicializar quando o DOM estiver pronto
        document.addEventListener('DOMContentLoaded', initializeUserDashboard);

        // Atualizar a página a cada 10 minutos para dados em tempo real
        setInterval(() => {
            window.location.reload();
        }, 600000); // 10 minutos
    </script>
</body>
</html>