        .icon-container i {
            font-size: 1.5rem;
        }
        
        .blue .icon-container i {
            color: var(--primary);
        }
        
        .green .icon-container i {
            color: #10b981;
        }
        
        .red .icon-container i {
            color: #ef4444;
