<body class="flex">
    <%- include('../partials/header'); %>
    
    <!-- Conte√∫do Principal -->
    <main class="flex-1 overflow-auto bg-gray-50 min-h-screen">
        <div class="main-container">
            <!-- Header da P√°gina -->
            <div class="section-header">
                <h1 class="section-title">Dashboard de Reagentes</h1>
            </div>
            
            <!-- Alertas de sucesso/erro -->
            <% if (typeof success !== 'undefined' && success) { %>
                <div class="alert alert-success">
                    <i class="fas fa-check-circle"></i> <%= success %>
                </div>
            <% } %>
            
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-circle"></i> <%= error %>
                </div>
            <% } %>
            
            
            
            
            <!-- Gr√°ficos e Informa√ß√µes -->
            <div class="charts-grid">
                <!-- Reagentes por Categoria (4 Mais Usados) -->
                <div class="chart-card enhanced-card">
                    <div class="chart-header with-border-bottom">
                        <h2 class="chart-title with-icon">
                            <i class="fas fa-chart-pie"></i>
                            Categorias Mais Utilizadas
                        </h2>
                    </div>
                    
                    <div class="progress-container">
                        <% if (typeof categorias !== 'undefined' && categorias.length > 0) { %>
                            <% 
                            // Ordenar por porcentagem (maior primeiro)
                            categorias.sort((a, b) => b.porcentagem - a.porcentagem);
                            
                            // Cores para as 4 categorias principais
                            const colors = ['progress-primary', 'progress-success', 'progress-warning', 'progress-info'];
                            %>
                            
                            <% categorias.forEach((categoria, index) => { %>
                                <div class="progress-item">
                                    <div class="">
                                        <span class="progress-label">
                                            <i class="fas <%= getCategoryIcon(categoria.tipo) %> category-icon"></i>
                                            <%= formatCategoryName(categoria.tipo) %>
                                        </span>
                                        <span class="progress-value"><%= categoria.porcentagem %>%</span>
                                    </div>
                                    <div class="progress-bar">
                                        <div class="progress-fill <%= colors[index] || 'progress-secondary' %>" 
                                            style="width: <%= categoria.porcentagem %>%">
                                            <span class="progress-tooltip"><%= categoria.porcentagem %>%</span>
                                        </div>
                                    </div>
                                    <div class="progress-stats">
                                        <small class="text-muted">
                                            <%= categoria.quantidade %> <%= categoria.quantidade === 1 ? 'item' : 'itens' %> 
                                            ‚Ä¢ Total: <%= categoria.total_quantidade || categoria.quantidade %> unidades
                                        </small>
                                    </div>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <div style="padding: 2rem; text-align: center; color: #6c757d;">
                                <i class="fas fa-chart-pie" style="font-size: 2rem; margin-bottom: 1rem;"></i>
                                <p>Nenhuma categoria com produtos cadastrada</p>
                                <a href="/produtos/adicionar" class="primary-btn" style="margin-top: 1rem;">
                                    <i class="fas fa-plus-circle"></i> Adicionar Primeiro Produto
                                </a>
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- √öltimas Movimenta√ß√µes -->
                <div class="chart-card enhanced-card">
                    <div class="chart-header with-border-bottom">
                        <h2 class="chart-title with-icon">
                            <i class="fas fa-exchange-alt"></i>
                            √öltimas Movimenta√ß√µes
                        </h2>
                        <a href="/movimentacoes" class="view-all-btn">Ver todas</a>
                    </div>
                    
                    <ul class="movement-list" id="movementsList">
                        <!-- As movimenta√ß√µes ser√£o carregadas via JavaScript -->
                        <li class="movement-item text-center text-muted py-4">
                            <i class="fas fa-spinner fa-spin me-2"></i>
                            Carregando movimenta√ß√µes...
                        </li>
                    </ul>
                    
                    <div class="chart-footer">
                        <span class="stats-info">
                            <i class="fas fa-history"></i>
                            <span id="lastUpdate">Carregando...</span>
                        </span>
                    </div>
                </div>
            </div>

            <!-- Tabela de Reagentes -->
            <div class="table-container enhanced-table">
                <div class="table-header with-background">
                    <h2 class="table-title with-icon">
                        <i class="fas fa-flask"></i>
                        √öltimos Reagentes Adicionados
                    </h2>
                    <a href="/produtos/adicionar" class="btn-add">
                        <i class="fas fa-plus-circle"></i> Novo Reagente
                    </a>
                </div>
                
                <div class="table-responsive">
                    <table class="reagent-table">
                        <thead>
                            <tr>
                                <th class="text-left">Nome do Reagente</th>
                                <th class="text-left">Tipo</th>
                                <th class="text-center">Quantidade</th>
                                <th class="text-center">Status</th>
                                <th class="text-center">A√ß√µes</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (typeof produtos !== 'undefined' && produtos.length > 0) { %>
                                <% produtos.forEach(produto => { %>
                                    <tr>
                                        <td>
                                            <div class="reagent-info">
                                                <div class="reagent-name"><%= produto.nome %></div>
                                                <% if (produto.descricao) { %>
                                                    <div class="reagent-details"><%= produto.descricao %></div>
                                                <% } %>
                                            </div>
                                        </td>
                                        <td class="text-left">
                                            <span class="badge"><%= produto.tipo %></span>
                                        </td>
                                        <td class="text-center">
                                            <div class="quantity-display <%= produto.quantidade <= (produto.estoque_minimo || 10) ? 'warning-quantity' : '' %>">
                                                <%= produto.quantidade %> <%= produto.unidade_medida %>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <% 
                                            let statusClass, statusText, statusIcon;
                                            if (produto.quantidade === 0) {
                                                statusClass = 'status-critical';
                                                statusText = 'Esgotado';
                                                statusIcon = 'fa-times-circle';
                                            } else if (produto.quantidade <= (produto.estoque_minimo || 10)) {
                                                statusClass = 'status-warning';
                                                statusText = 'Aten√ß√£o';
                                                statusIcon = 'fa-exclamation-triangle';
                                            } else {
                                                statusClass = 'status-normal';
                                                statusText = 'Normal';
                                                statusIcon = 'fa-check-circle';
                                            }
                                            %>
                                            <span class="status-badge <%= statusClass %>">
                                                <i class="fas <%= statusIcon %>"></i> <%= statusText %>
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <div class="action-buttons">
                                                <button class="btn-action btn-edit" title="Editar" onclick="editarProduto(<%= produto.id_produto %>)">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <form action="/produtos/deletar/<%= produto.id_produto %>" method="POST" style="display: inline;">
                                                    <button type="button" class="btn-action btn-delete" title="Excluir" onclick="confirmarExclusao(this)">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="5" class="text-center" style="padding: 2rem; color: #6c757d;">
                                        <i class="fas fa-box-open" style="font-size: 2rem; margin-bottom: 1rem;"></i>
                                        <p>Nenhum produto cadastrado. Adicione o primeiro produto!</p>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
                
                <div class="table-footer">
                    <div class="table-summary">
                        <span class="summary-text">
                            <i class="fas fa-database"></i> 
                            Total de <%= typeof produtos !== 'undefined' ? produtos.length : 0 %> reagentes listados
                        </span>
                    </div>
                    <a href="/produtos" class="view-all-btn">
                        <i class="fas fa-list"></i> Ver Todos
                    </a>
                </div>
            </div>
        </div>
    </main>

    <script>
        // ===== FUN√á√ïES PRINCIPAIS =====

// Fun√ß√£o para carregar as √∫ltimas 4 movimenta√ß√µes
async function loadRecentMovements() {
    try {
        console.log('üîÑ Carregando √∫ltimas 4 movimenta√ß√µes...');
        
        const response = await fetch('/api/recent-movements');
        if (!response.ok) {
            throw new Error(`Erro na requisi√ß√£o: ${response.status}`);
        }
        
        const movements = await response.json();
        const movementsList = document.getElementById('movementsList');
        
        console.log(`‚úÖ ${movements ? movements.length : 0} movimenta√ß√µes recebidas`);
        
        // Limpar a lista
        movementsList.innerHTML = '';
        
        if (!movements || movements.length === 0) {
            movementsList.innerHTML = `
                <li class="movement-item text-center text-muted py-4">
                    <i class="fas fa-inbox fa-2x mb-2"></i>
                    <p>Nenhuma movimenta√ß√£o registrada</p>
                    <small class="text-muted">As movimenta√ß√µes aparecer√£o aqui quando forem registradas</small>
                </li>
            `;
            updateLastUpdateTime();
            return;
        }
        
        // Garantir que mostramos apenas 4 movimenta√ß√µes
        const lastFourMovements = movements.slice(0, 4);
        
        lastFourMovements.forEach(movement => {
            const movementItem = createMovementItem(movement);
            movementsList.appendChild(movementItem);
        });
        
        updateLastUpdateTime();
        
    } catch (error) {
        console.error('‚ùå Erro ao carregar movimenta√ß√µes:', error);
        showMovementsError(error.message);
    }
}

// Fun√ß√£o para criar um item de movimenta√ß√£o
function createMovementItem(movement) {
    const movementItem = document.createElement('li');
    movementItem.className = 'movement-item';
    
    const date = new Date(movement.date);
    const formattedDate = date.toLocaleDateString('pt-BR');
    const formattedTime = date.toLocaleTimeString('pt-BR', {
        hour: '2-digit', 
        minute: '2-digit'
    });
    
    const isEntrada = movement.type === 'entrada';
    const iconClass = isEntrada ? 'fa-arrow-down text-success' : 'fa-arrow-up text-danger';
    const bgClass = isEntrada ? 'movement-in' : 'movement-out';
    const typeText = isEntrada ? 'Entrada' : 'Sa√≠da';
    const quantityClass = isEntrada ? 'text-success' : 'text-danger';
    
    // Extrair informa√ß√µes do projeto/fornecedor
    let projectInfo = movement.project || '';
    if (isEntrada && projectInfo.includes('Fornecedor:')) {
        projectInfo = projectInfo.replace('Fornecedor:', 'Fornecedor:').trim();
    }
    
    movementItem.innerHTML = `
        <div class="movement-icon ${bgClass}">
            <i class="fas ${iconClass}"></i>
        </div>
        <div class="movement-content">
            <p class="movement-title">
                ${typeText} - ${movement.reagent}
                <span class="movement-quantity ${quantityClass}">
                    ${movement.quantity} ${movement.unit}
                </span>
            </p>
            <div class="movement-details">
                <span class="movement-date">
                    <i class="far fa-calendar me-1"></i>${formattedDate}
                </span>
                <span class="movement-time">
                    <i class="far fa-clock me-1"></i>${formattedTime}
                </span>
                <span class="movement-responsible">
                    <i class="fas fa-user me-1"></i>${movement.responsible}
                </span>
            </div>
            ${projectInfo ? `
                <div class="movement-project">
                    <small class="text-muted">
                        <i class="fas fa-info-circle me-1"></i>${projectInfo}
                    </small>
                </div>
            ` : ''}
        </div>
    `;
    
    return movementItem;
}

// Fun√ß√£o para atualizar o timestamp
function updateLastUpdateTime() {
    const lastUpdateElement = document.getElementById('lastUpdate');
    if (lastUpdateElement) {
        lastUpdateElement.textContent = `Atualizado √†s ${new Date().toLocaleTimeString('pt-BR', {
            hour: '2-digit', 
            minute: '2-digit'
        })}`;
    }
}

// Fun√ß√£o para mostrar erro nas movimenta√ß√µes
function showMovementsError(errorMessage) {
    const movementsList = document.getElementById('movementsList');
    movementsList.innerHTML = `
        <li class="movement-item text-center text-danger py-4">
            <i class="fas fa-exclamation-triangle fa-2x mb-2"></i>
            <p>Erro ao carregar movimenta√ß√µes</p>
            <small class="text-muted">${errorMessage || 'Tente recarregar a p√°gina'}</small>
        </li>
    `;
}

// ===== FUN√á√ïES PARA PRODUTOS =====

// Fun√ß√£o para editar produto
function editarProduto(id) {
    window.location.href = `/produtos/editar/${id}`;
}

// Fun√ß√£o para confirmar exclus√£o de produto
function confirmarExclusao(id, nome) {
    if (confirm(`Tem certeza que deseja excluir o produto "${nome}"?\n\nEsta a√ß√£o n√£o pode ser desfeita.`)) {
        // Criar um formul√°rio din√¢mico para enviar a requisi√ß√£o DELETE
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = `/produtos/deletar/${id}`;
        
        // Adicionar token CSRF se necess√°rio
        const csrfToken = document.querySelector('meta[name="csrf-token"]');
        if (csrfToken) {
            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = '_csrf';
            input.value = csrfToken.getAttribute('content');
            form.appendChild(input);
        }
        
        document.body.appendChild(form);
        form.submit();
    }
}

// ===== EFEITOS VISUAIS =====

// Adicionar efeitos de hover nos cards
function initializeCardEffects() {
    const cards = document.querySelectorAll('.stats-card, .chart-card, .enhanced-card');
    cards.forEach(card => {
        card.addEventListener('mouseenter', () => {
            card.style.transform = 'translateY(-5px)';
            card.style.boxShadow = '0 10px 25px rgba(0, 0, 0, 0.1)';
            card.style.transition = 'all 0.3s ease';
        });
        
        card.addEventListener('mouseleave', () => {
            card.style.transform = 'translateY(0)';
            card.style.boxShadow = '0 4px 6px rgba(0, 0, 0, 0.04)';
        });
    });
}

// Adicionar interatividade aos bot√µes de a√ß√£o
function initializeActionButtons() {
    const actionButtons = document.querySelectorAll('.btn-action');
    actionButtons.forEach(button => {
        button.addEventListener('click', function() {
            const action = this.classList.contains('btn-edit') ? 'editar' : 'excluir';
            const reagentName = this.closest('tr').querySelector('.reagent-name').textContent;
            console.log(`A√ß√£o: ${action} no reagente: ${reagentName}`);
            
            // Efeito visual no clique
            this.style.transform = 'scale(0.95)';
            setTimeout(() => {
                this.style.transform = 'scale(1)';
            }, 150);
        });
    });
}

// Inicializar bot√£o de adicionar
function initializeAddButton() {
    const addButton = document.querySelector('.btn-add');
    if (addButton && addButton.tagName !== 'A') {
        addButton.addEventListener('click', function() {
            window.location.href = '/produtos/adicionar';
        });
    }
}

// ===== INICIALIZA√á√ÉO =====

// Fun√ß√£o principal de inicializa√ß√£o
function initializeDashboard() {
    console.log('üöÄ Inicializando dashboard...');
    
    // Carregar movimenta√ß√µes imediatamente
    loadRecentMovements();
    
    // Inicializar efeitos visuais
    initializeCardEffects();
    initializeActionButtons();
    initializeAddButton();
    
    // Configurar atualiza√ß√£o autom√°tica
    const refreshInterval = 30000; // 30 segundos
    setInterval(loadRecentMovements, refreshInterval);
    
    console.log('‚úÖ Dashboard inicializado com sucesso');
}

// ===== EVENT LISTENERS =====

// Inicializar quando o DOM estiver pronto
document.addEventListener('DOMContentLoaded', initializeDashboard);

// Adicionar listener para visibilidade da p√°gina (otimiza√ß√£o)
document.addEventListener('visibilitychange', function() {
    if (!document.hidden) {
        // Recarregar movimenta√ß√µes quando a p√°gina se tornar vis√≠vel
        loadRecentMovements();
    }
});

