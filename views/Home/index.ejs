<%
// Fun√ß√£o para obter √≠cone baseado no tipo de categoria
function getCategoryIcon(tipo) {
    const tipoLower = tipo.toLowerCase();
    if (tipoLower.includes('acido') || tipoLower.includes('√°cido')) return 'fa-vial';
    if (tipoLower.includes('base') || tipoLower.includes('alcali')) return 'fa-flask';
    if (tipoLower.includes('solvente') || tipoLower.includes('org√¢nico')) return 'fa-tint';
    if (tipoLower.includes('sal') || tipoLower.includes('inorg√¢nico')) return 'fa-cube';
    if (tipoLower.includes('oxidante')) return 'fa-fire';
    if (tipoLower.includes('corrosivo')) return 'fa-exclamation-triangle';
    return 'fa-vial';
}

// Fun√ß√£o para formatar o nome da categoria
function formatCategoryName(tipo) {
    if (!tipo) return 'Outros';
    
    const tipoLower = tipo.toLowerCase();
    if (tipoLower.includes('acido') || tipoLower.includes('√°cido')) return '√Åcidos';
    if (tipoLower.includes('base') || tipoLower.includes('alcali')) return 'Bases';
    if (tipoLower.includes('solvente') || tipoLower.includes('org√¢nico')) return 'Solventes';
    if (tipoLower.includes('sal') || tipoLower.includes('inorg√¢nico')) return 'Sais';
    if (tipoLower.includes('oxidante')) return 'Oxidantes';
    if (tipoLower.includes('corrosivo')) return 'Corrosivos';
    
    // Capitalizar primeira letra
    return tipo.charAt(0).toUpperCase() + tipo.slice(1).toLowerCase();
}
%>
    </script>
