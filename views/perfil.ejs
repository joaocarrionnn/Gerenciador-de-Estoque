<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <%- include('./partials/head'); %>
    <style>
        :root {
    --primary: #2c3e50;
    --secondary: #1a2530;
    --accent: #34495e;
    --light-bg: #F9FAFB;
    --card-bg: #FFFFFF;
    --text-primary: #1F2937;
    --text-secondary: #6B7280;
    --border-color: #E5E7EB;
}

/* Reset e configura√ß√µes base */
* {
    box-sizing: border-box;
}

body {
    background-color: var(--light-bg);
    color: var(--text-primary);
    font-family: 'Inter', sans-serif;
    margin: 0;
    padding: 0;
    overflow-x: hidden;
}

/* Layout Principal */
.main-content {
    margin-left: 320px;
    width: calc(100% - 320px);
    transition: margin-left 0.3s ease, width 0.3s ease;
    min-height: 100vh;
    padding-bottom: 2rem;
    position: relative;
}

@media (max-width: 1200px) {
    .main-content {
        margin-left: 280px;
        width: calc(100% - 280px);
    }
}

@media (max-width: 992px) {
    .main-content {
        margin-left: 80px;
        width: calc(100% - 80px);
    }
}

@media (max-width: 576px) {
    .main-content {
        margin-left: 0;
        margin-bottom: 70px;
        width: 100%;
        padding-bottom: 5rem;
    }
}

/* Container Principal */
.main-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 24px 20px 60px;
    position: relative;
    overflow: visible !important;
}

/* Cards */
.card {
    background-color: var(--card-bg);
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
    border: 1px solid #e5e7eb;
    position: relative;
    overflow: visible !important;
}

.card:hover {
    box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
    transform: translateY(-2px);
}

/* Sistema de Administra√ß√£o - CORRE√á√ïES CR√çTICAS */
.search-container {
    position: relative;
    z-index: 1000;
    width: 100%;
}

#searchUserInput {
    width: 100%;
    padding: 12px 16px 12px 40px;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    font-size: 14px;
    transition: all 0.3s ease;
    background: white;
}

#searchUserInput:focus {
    outline: none;
    border-color: #225c96;
    box-shadow: 0 0 0 3px rgba(34, 92, 150, 0.1);
}

#searchResults {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    max-height: 280px;
    overflow-y: auto;
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
    z-index: 1100;
    margin-top: 4px;
    display: none;
}

#searchResults.active {
    display: block;
}

/* Posicionamento inteligente - evita cortes na parte inferior */
.search-container.reposition-up #searchResults {
    top: auto;
    bottom: 100%;
    margin-top: 0;
    margin-bottom: 4px;
}

/* Itens dos resultados */
.search-result-item {
    padding: 12px 16px;
    border-bottom: 1px solid #f8fafc;
    cursor: pointer;
    transition: background-color 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.search-result-item:last-child {
    border-bottom: none;
}

.search-result-item:hover {
    background-color: #f8fafc;
}

.search-result-content {
    display: flex;
    align-items: center;
    flex: 1;
    min-width: 0;
}

.search-result-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: #e8ebee;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    margin-right: 12px;
}

.search-result-text {
    flex: 1;
    min-width: 0;
}

.search-result-name {
    font-weight: 600;
    color: #2c3e50;
    font-size: 14px;
    margin-bottom: 2px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.search-result-details {
    font-size: 12px;
    color: #6b7280;
    margin-bottom: 4px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.search-result-type {
    font-size: 11px;
    font-weight: 500;
}

.search-result-type.admin {
    color: #059669;
}

.search-result-type.user {
    color: #2563eb;
}

.search-result-button {
    flex-shrink: 0;
    margin-left: 12px;
}

.select-user-btn {
    padding: 6px 12px;
    background-color: #225c96;
    color: white;
    border: none;
    border-radius: 6px;
    font-size: 12px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
}

.select-user-btn:hover {
    background-color: #1a2530;
    transform: translateY(-1px);
}

/* Informa√ß√µes do usu√°rio selecionado */
#userInfo {
    padding: 16px;
    background-color: #f8fafc;
    border-radius: 8px;
    border: 1px solid #e5e7eb;
    margin-top: 16px;
    transition: all 0.3s ease;
}

#promoteUserBtn {
    padding: 8px 16px;
    background-color: #225c96;
    color: white;
    border: none;
    border-radius: 6px;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 8px;
}

#promoteUserBtn:hover {
    background-color: #1a2530;
}

#promoteUserBtn.demote {
    background-color: #dc2626;
}

#promoteUserBtn.demote:hover {
    background-color: #b91c1c;
}

/* Overlay para mobile */
.search-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 999;
    display: none;
    backdrop-filter: blur(4px);
}

.search-overlay.active {
    display: block;
}

/* Scrollbar personalizada */
#searchResults::-webkit-scrollbar {
    width: 6px;
}

#searchResults::-webkit-scrollbar-track {
    background: #f1f5f9;
    border-radius: 3px;
}

#searchResults::-webkit-scrollbar-thumb {
    background: #cbd5e1;
    border-radius: 3px;
}

#searchResults::-webkit-scrollbar-thumb:hover {
    background: #94a3b8;
}

/* Responsividade - MOBILE FIRST */
@media (max-width: 768px) {
    .search-container {
        z-index: 100;
    }

    #searchResults {
        position: fixed !important;
        top: 50% !important;
        left: 50% !important;
        transform: translate(-50%, -50%) !important;
        width: 90vw !important;
        max-width: 400px !important;
        max-height: 60vh !important;
        z-index: 10000 !important;
        margin: 0 !important;
    }

    .search-overlay.active {
        display: block;
        z-index: 9999;
    }

    /* Ajustes de layout para mobile */
    .main-container {
        padding: 16px 15px 80px;
    }

    .card {
        margin-bottom: 1rem;
    }
}

/* Componentes de UI */
.profile-header-gradient {
    background: linear-gradient(120deg, #e8ebee, #d6dadd);
}

.btn-custom {
    background-color: #225c96;
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 8px;
    cursor: pointer;
    transition: background-color 0.3s;
}

.btn-custom:hover {
    background-color: #1a2530;
}

.icon-custom {
    color: #225c96;
}

.focus-custom:focus {
    border-color: #225c96;
    box-shadow: 0 0 0 3px rgba(34, 92, 150, 0.1);
}

/* Upload de Foto */
.photo-upload-container {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.7);
    z-index: 1000;
    justify-content: center;
    align-items: center;
}

.photo-upload-modal {
    background-color: white;
    border-radius: 12px;
    padding: 24px;
    width: 90%;
    max-width: 500px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
}

.photo-preview {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    margin: 0 auto 20px;
    overflow: hidden;
    border: 4px solid #e8ebee;
    display: flex;
    justify-content: center;
    align-items: center;
}

.photo-preview img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.upload-btn, .cancel-btn {
    display: block;
    width: 100%;
    padding: 12px;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    text-align: center;
    font-weight: 500;
    transition: background-color 0.3s;
    margin-top: 10px;
}

.upload-btn {
    background-color: #225c96;
    color: white;
}

.upload-btn:hover {
    background-color: #1a2530;
}

.cancel-btn {
    background-color: #e8ebee;
    color: #2c3e50;
}

.cancel-btn:hover {
    background-color: #d6dadd;
}

.file-input-label {
    display: block;
    padding: 12px 20px;
    background-color: #e8ebee;
    color: #2c3e50;
    border-radius: 8px;
    text-align: center;
    cursor: pointer;
    margin-bottom: 15px;
    font-weight: 500;
    transition: background-color 0.3s;
}

.file-input-label:hover {
    background-color: #d6dadd;
}

.file-input {
    display: none;
}

