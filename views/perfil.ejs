    <!-- Modal de upload de foto -->
    <div class="photo-upload-container" id="photoUploadContainer">
        <div class="photo-upload-modal">
            <h3 style="text-align: center; margin-bottom: 20px; color: #2c3e50;">Alterar Foto de Perfil</h3>
            
            <div class="photo-preview">
                <img src="" alt="Preview" id="photoPreview">
            </div>
            
            <label for="photoFile" class="file-input-label">
                <i class="fas fa-upload"></i> Selecionar Imagem
            </label>
            <input type="file" id="photoFile" class="file-input" accept="image/*">
            
            <button class="upload-btn" id="uploadPhotoBtn">
                <i class="fas fa-check"></i> Salvar Foto
            </button>
            
            <button class="cancel-btn" id="cancelUploadBtn">
                <i class="fas fa-times"></i> Cancelar
            </button>
        </div>
    </div>

    <script>
       document.addEventListener('DOMContentLoaded', function() {
    console.log('üîß Script do perfil inicializado');
    
    // Elementos do DOM
    const changePhotoBtn = document.getElementById('changePhotoBtn');
    const photoUploadContainer = document.getElementById('photoUploadContainer');
    const photoFile = document.getElementById('photoFile');
    const photoPreview = document.getElementById('photoPreview');
    const uploadPhotoBtn = document.getElementById('uploadPhotoBtn');
    const cancelUploadBtn = document.getElementById('cancelUploadBtn');
    const profileImage = document.getElementById('profileImage');
    const tabSenha = document.getElementById('tabSenha');
    const formAlterarSenhaSection = document.getElementById('formAlterarSenhaSection');
    const formAlterarSenha = document.getElementById('formAlterarSenha');
    const formEditarPerfil = document.getElementById('formEditarPerfil');
    
    // Abrir modal de upload
    if (changePhotoBtn) {
        changePhotoBtn.addEventListener('click', function() {
            console.log('üì∑ Abrindo modal de upload de foto');
            photoUploadContainer.style.display = 'flex';
            // Preencher o preview com a imagem atual
            photoPreview.src = profileImage.src;
        });
    }
    
    // Fechar modal
    if (cancelUploadBtn) {
        cancelUploadBtn.addEventListener('click', function() {
            console.log('‚ùå Fechando modal de upload');
            photoUploadContainer.style.display = 'none';
            // Limpar sele√ß√£o de arquivo
            if (photoFile) photoFile.value = '';
        });
    }
    
    // Fechar modal clicando fora
    if (photoUploadContainer) {
        photoUploadContainer.addEventListener('click', function(e) {
            if (e.target === photoUploadContainer) {
                console.log('‚ùå Fechando modal (clique fora)');
                photoUploadContainer.style.display = 'none';
                if (photoFile) photoFile.value = '';
            }
        });
    }
    
    // Preview da imagem selecionada
    if (photoFile) {
        photoFile.addEventListener('change', function(e) {
            const file = e.target.files[0];
            console.log('üñºÔ∏è Arquivo selecionado:', file ? file.name : 'Nenhum');
            
            if (file) {
                // Valida√ß√µes da imagem
                if (!file.type.startsWith('image/')) {
                    alert('‚ùå Por favor, selecione apenas arquivos de imagem!');
                    this.value = '';
                    return;
                }
                
                // Validar tamanho (m√°ximo 5MB)
                if (file.size > 5 * 1024 * 1024) {
                    alert('‚ùå A imagem deve ter no m√°ximo 5MB!');
                    this.value = '';
                    return;
                }
                
                const reader = new FileReader();
                
                reader.onload = function(e) {
                    photoPreview.src = e.target.result;
                    console.log('‚úÖ Preview da imagem atualizado');
                };
                
                reader.onerror = function() {
                    console.error('‚ùå Erro ao ler arquivo para preview');
                    alert('Erro ao carregar a imagem selecionada.');
                };
                
                reader.readAsDataURL(file);
            }
        });
    }
    
    // Upload de foto - VERS√ÉO CORRIGIDA E MELHORADA
    if (uploadPhotoBtn) {
        uploadPhotoBtn.addEventListener('click', function() {
            const fileInput = document.getElementById('photoFile');
            
            if (!fileInput || fileInput.files.length === 0) {
                alert('‚ùå Por favor, selecione uma imagem primeiro.');
                return;
            }

            const file = fileInput.files[0];
            console.log('üöÄ Iniciando upload do arquivo:', file.name);

            // Valida√ß√µes finais antes do upload
            if (!file.type.startsWith('image/')) {
                alert('‚ùå Arquivo selecionado n√£o √© uma imagem v√°lida!');
                return;
            }

            if (file.size > 5 * 1024 * 1024) {
                alert('‚ùå A imagem √© muito grande! M√°ximo: 5MB');
                return;
            }

            const formData = new FormData();
            formData.append('profilePhoto', file);

            // Mostrar estado de loading
            const originalText = uploadPhotoBtn.innerHTML;
            uploadPhotoBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Enviando...';
            uploadPhotoBtn.disabled = true;

            console.log('üì§ Enviando requisi√ß√£o para o servidor...');
            
            fetch('/perfil/upload-foto', {
                method: 'POST',
                body: formData
            })
            .then(response => {
                console.log('üì® Resposta recebida, status:', response.status);
                
                if (!response.ok) {
                    // Se a resposta n√£o for OK, tentar obter mais informa√ß√µes
                    return response.text().then(text => {
                        console.error('‚ùå Resposta de erro:', text);
                        throw new Error(`Erro no servidor (${response.status}): ${text}`);
                    });
                }
                return response.json();
            })
            .then(data => {
                console.log('‚úÖ Resposta JSON do servidor:', data);
                
                if (data.success) {
                    showToast(data.message, 'success');
                    
                    // Atualizar a imagem do perfil imediatamente
                    if (profileImage && data.fotoUrl) {
                        const newSrc = data.fotoUrl + '?t=' + new Date().getTime();
                        profileImage.src = newSrc;
                        console.log('üñºÔ∏è Imagem do perfil atualizada:', newSrc);
                    }
                    
                    // Fechar modal e limpar
                    photoUploadContainer.style.display = 'none';
                    fileInput.value = '';
                    
                    // Recarregar a p√°gina ap√≥s um breve delay para mostrar o feedback
                    console.log('üîÑ Agendando recarregamento da p√°gina...');
                    setTimeout(() => {
                        console.log('üîÑ Recarregando p√°gina...');
                        location.reload();
                    }, 1500);
                    
                } else {
                    throw new Error(data.message || 'Erro desconhecido do servidor');
                }
            })
            .catch(error => {
                console.error('‚ùå Erro no processo de upload:', error);
                
                let errorMessage = 'Erro ao fazer upload da foto';
                if (error.message.includes('Failed to fetch')) {
                    errorMessage = 'Erro de conex√£o. Verifique sua internet.';
                } else if (error.message.includes('404')) {
                    errorMessage = 'Servi√ßo n√£o encontrado. Tente novamente.';
                } else if (error.message.includes('500')) {
                    errorMessage = 'Erro interno do servidor. Tente novamente.';
                } else {
                    errorMessage = error.message;
                }
                
                showToast(errorMessage, 'danger');
            })
            .finally(() => {
                // Restaurar estado original do bot√£o
                uploadPhotoBtn.innerHTML = originalText;
                uploadPhotoBtn.disabled = false;
                console.log('üîÑ Bot√£o de upload restaurado');
            });
        });
    }

    // Fun√ß√£o para mostrar notifica√ß√µes toast
    function showToast(message, type = 'success') {
        console.log('üí¨ Exibindo toast:', type, message);
        
        // Criar container se n√£o existir
        let toastContainer = document.getElementById('toast-container');
        if (!toastContainer) {
            toastContainer = document.createElement('div');
            toastContainer.id = 'toast-container';
            toastContainer.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                z-index: 10000;
                max-width: 400px;
            `;
            document.body.appendChild(toastContainer);
        }
        
        const toast = document.createElement('div');
        const bgColor = type === 'success' ? 'bg-green-500' : 'bg-red-500';
        const icon = type === 'success' ? 'fa-check-circle' : 'fa-exclamation-triangle';
        
        toast.className = `${bgColor} text-white px-4 py-3 rounded-lg shadow-lg mb-2 transition-all duration-300 transform translate-x-full`;
        toast.innerHTML = `
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <i class="fas ${icon} mr-3"></i>
                    <span class="font-medium">${message}</span>
                </div>
                <button class="ml-4 text-white hover:text-gray-200 transition-colors">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        `;
        
        // Adicionar evento para fechar o toast
        const closeBtn = toast.querySelector('button');
        closeBtn.addEventListener('click', function() {
            toast.classList.add('translate-x-full');
            setTimeout(() => {
                if (toast.parentElement) {
                    toast.remove();
                }
            }, 300);
        });
        
        toastContainer.appendChild(toast);
        
        // Animar entrada
        setTimeout(() => {
            toast.classList.remove('translate-x-full');
        }, 10);
        
        // Auto-remover ap√≥s 5 segundos
        setTimeout(() => {
            if (toast.parentElement) {
                toast.classList.add('translate-x-full');
                setTimeout(() => {
                    if (toast.parentElement) {
                        toast.remove();
                    }
                }, 300);
            }
        }, 5000);
    }
    
    // Navega√ß√£o entre abas (se houver m√∫ltiplas abas)
    const tabButtons = document.querySelectorAll('nav button');
    if (tabButtons.length > 0) {
        tabButtons.forEach(button => {
            button.addEventListener('click', function() {
                console.log('üìë Alternando para aba:', this.id || this.textContent);
                
                // Remove a classe ativa de todos os bot√µes
                tabButtons.forEach(btn => {
                    btn.classList.remove('tab-active');
                    btn.classList.remove('text-[#2c3e50]');
                    btn.classList.add('text-gray-600');
                });
                
                // Adiciona a classe ativa ao bot√£o clicado
                this.classList.add('tab-active');
                this.classList.add('text-[#2c3e50]');
                this.classList.remove('text-gray-600');
                
                // Mostrar/ocultar se√ß√µes baseado na aba
                if (this.id === 'tabSenha' && formAlterarSenhaSection) {
                    formAlterarSenhaSection.style.display = 'block';
                    if (formEditarPerfil) formEditarPerfil.style.display = 'none';
                } else {
                    if (formAlterarSenhaSection) formAlterarSenhaSection.style.display = 'none';
                    if (formEditarPerfil) formEditarPerfil.style.display = 'block';
                }
            });
        });
    }
    
    // Formul√°rio de altera√ß√£o de senha
    if (formAlterarSenha) {
        formAlterarSenha.addEventListener('submit', function(e) {
            console.log('üîê Validando formul√°rio de altera√ß√£o de senha');
            
            const senhaAtual = this.querySelector('input[name="senhaAtual"]').value;
            const novaSenha = this.querySelector('input[name="novaSenha"]').value;
            const confirmarSenha = this.querySelector('input[name="confirmarSenha"]').value;
            
            // Validar se as senhas coincidem
            if (novaSenha !== confirmarSenha) {
                e.preventDefault();
                showToast('As senhas n√£o coincidem!', 'danger');
                return;
            }
            
            // Validar comprimento da senha
            if (novaSenha.length < 6) {
                e.preventDefault();
                showToast('A senha deve ter pelo menos 6 caracteres!', 'danger');
                return;
            }
            
            // Validar se a nova senha √© diferente da atual
            if (novaSenha === senhaAtual) {
                e.preventDefault();
                showToast('A nova senha deve ser diferente da senha atual!', 'danger');
                return;
            }
            
            console.log('‚úÖ Valida√ß√£o de senha passou - enviando formul√°rio');
        });
    }
    
    // Formul√°rio de edi√ß√£o de perfil
    if (formEditarPerfil) {
        formEditarPerfil.addEventListener('submit', function(e) {
            console.log('üë§ Validando formul√°rio de edi√ß√£o de perfil');
            
            const nome = this.querySelector('input[name="nome"]').value.trim();
            const sobrenome = this.querySelector('input[name="sobrenome"]').value.trim();
            const email = this.querySelector('input[name="email"]').value.trim();
            const turma = this.querySelector('select[name="turma"]').value;
            
            // Valida√ß√£o b√°sica de campos obrigat√≥rios
            if (!nome || !sobrenome || !email || !turma) {
                e.preventDefault();
                showToast('Por favor, preencha todos os campos obrigat√≥rios!', 'danger');
                return;
            }
            
            // Validar email
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(email)) {
                e.preventDefault();
                showToast('Por favor, insira um email v√°lido!', 'danger');
                return;
            }
            
            // Validar comprimento do nome
            if (nome.length < 2 || sobrenome.length < 2) {
                e.preventDefault();
                showToast('Nome e sobrenome devem ter pelo menos 2 caracteres!', 'danger');
                return;
            }
            
            console.log('‚úÖ Valida√ß√£o de perfil passou - enviando formul√°rio');
        });
    }
    
    // Bot√£o "Ver todas" atividades (se existir)
    const viewAllBtn = document.querySelector('.view-all-btn');
    if (viewAllBtn) {
        viewAllBtn.addEventListener('click', function() {
            console.log('üìä Redirecionando para p√°gina de atividades...');
            // window.location.href = '/atividades';
        });
    }
    
    // Adicionar alguns estilos din√¢micos para melhor UX
    const style = document.createElement('style');
    style.textContent = `
        #toast-container .bg-green-500 {
            background-color: #10B981;
        }
        #toast-container .bg-red-500 {
            background-color: #EF4444;
        }
        .fa-spinner {
            animation: spin 1s linear infinite;
        }
        @keyframes spin {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }
    `;
    document.head.appendChild(style);
    
    console.log('‚úÖ Script do perfil carregado com sucesso!');
});
    </script>
