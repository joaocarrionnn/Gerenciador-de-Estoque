// ==================== SISTEMA DE POSICIONAMENTO INTELIGENTE ====================
function setupSearchPositioning() {
    const searchContainer = document.querySelector('.search-container');
    const searchInput = document.getElementById('searchUserInput');
    const searchResults = document.getElementById('searchResults');
    
    if (!searchContainer || !searchInput || !searchResults) return;
    
    function checkAvailableSpace() {
        if (window.innerWidth <= 768) return;
        
        const inputRect = searchInput.getBoundingClientRect();
        const spaceBelow = window.innerHeight - inputRect.bottom;
        const resultsHeight = 300;
        
        if (spaceBelow < resultsHeight && inputRect.top > resultsHeight) {
            searchContainer.classList.add('reposition-up');
        } else {
            searchContainer.classList.remove('reposition-up');
        }
    }
    
    searchInput.addEventListener('focus', checkAvailableSpace);
    window.addEventListener('resize', checkAvailableSpace);
    window.addEventListener('scroll', checkAvailableSpace);
}

