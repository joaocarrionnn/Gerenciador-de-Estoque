function selecionarUsuario(usuario, adminSystem) {
    const { userInfo, selectedUserName, selectedUserEmail, selectedUserType, searchInput, searchOverlay } = adminSystem.elements;
    
    adminSystem.selectedUser = usuario;
    
    // Atualizar informa√ß√µes do usu√°rio
    selectedUserName.textContent = usuario.nome_completo;
    selectedUserEmail.textContent = `${usuario.usuario} ‚Ä¢ ${usuario.email}`;
    selectedUserType.textContent = usuario.tipo === 'admin' ? 'Administrador' : 'Usu√°rio';
    selectedUserType.className = `text-xs ${usuario.tipo === 'admin' ? 'text-green-600' : 'text-blue-600'} mt-1`;
    
    // Atualizar bot√£o de promo√ß√£o
    updatePromoteButton(adminSystem);
    
    // Mostrar informa√ß√µes e limpar busca
    userInfo.classList.remove('hidden');
    hideSearchResults(adminSystem);
    searchInput.value = '';
    searchOverlay.classList.remove('active');
    
    // Limpar mensagens anteriores
    adminSystem.elements.promotionMessage.classList.add('hidden');
}

function setupPromotionSystem(adminSystem) {
    const { promoteUserBtn } = adminSystem.elements;
    
    if (!promoteUserBtn) return;

    promoteUserBtn.addEventListener('click', async function() {
        if (!adminSystem.selectedUser) return;
        
        const novoStatus = adminSystem.selectedUser.tipo === 'admin' ? 'usuario' : 'admin';
        const acao = novoStatus === 'admin' ? 'promover para administrador' : 'rebaixar para usu√°rio comum';
        
        if (!confirm(`Tem certeza que deseja ${acao} o usu√°rio "${adminSystem.selectedUser.nome_completo}"?`)) {
            return;
        }
        
        await promoverUsuario(novoStatus, adminSystem);
    });
}

async function promoverUsuario(novoStatus, adminSystem) {
    const { promoteUserBtn, promotionMessage } = adminSystem.elements;
    
    try {
        // Mostrar loading
        promoteUserBtn.disabled = true;
        const originalHTML = promoteUserBtn.innerHTML;
        promoteUserBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i> Processando...';
        
        const response = await fetch('/admin/promover-usuario', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                userId: adminSystem.selectedUser.id_usuario,
                novoTipo: novoStatus
            })
        });
        
        if (!response.ok) {
            throw new Error('Erro na resposta do servidor');
        }
        
        const data = await response.json();
        
        if (data.success) {
            // Atualizar interface
            adminSystem.selectedUser.tipo = novoStatus;
            selecionarUsuario(adminSystem.selectedUser, adminSystem);
            
            // Mostrar mensagem de sucesso
            showPromotionMessage(data.message, 'success', adminSystem);
        } else {
            throw new Error(data.message || 'Erro desconhecido');
        }
        
    } catch (error) {
        console.error('‚ùå Erro ao promover usu√°rio:', error);
        showPromotionMessage(`Erro: ${error.message}`, 'error', adminSystem);
    } finally {
        promoteUserBtn.disabled = false;
        updatePromoteButton(adminSystem);
    }
}

function updatePromoteButton(adminSystem) {
    const { promoteUserBtn, selectedUser } = adminSystem.elements;
    
    if (!selectedUser) return;
    
    if (adminSystem.selectedUser.tipo === 'admin') {
        promoteUserBtn.innerHTML = '<i class="fas fa-user mr-2"></i> Rebaixar';
        promoteUserBtn.className = 'px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-all flex items-center text-sm font-medium whitespace-nowrap w-full sm:w-auto justify-center';
    } else {
        promoteUserBtn.innerHTML = '<i class="fas fa-shield-alt mr-2"></i> Promover';
        promoteUserBtn.className = 'px-4 py-2 bg-[#225c96] text-white rounded-lg hover:bg-[#1a2530] transition-all flex items-center text-sm font-medium whitespace-nowrap w-full sm:w-auto justify-center';
    }
}

