<body class="flex h-screen bg-gray-100">
    <%- include('./partials/header'); %>

    <main class="main-content">
        <div class="main-container">
            <!-- Alertas de sucesso/erro -->
            <% if (typeof success !== 'undefined' && success) { %>
                <div class="alert alert-success">
                    <i class="fas fa-check-circle alert-icon"></i>
                    <div>
                        <p class="font-bold">Sucesso!</p>
                        <p class="mt-1"><%= success %></p>
                    </div>
                </div>
            <% } %>

            <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-error">
                    <i class="fas fa-exclamation-circle alert-icon"></i>
                    <div>
                        <p class="font-bold">Erro</p>
                        <p class="mt-1"><%= error %></p>
                    </div>
                </div>
            <% } %>
            
            <!-- Cabeçalho da página -->
            <div class="mb-8">
                <h1 class="text-2xl md:text-3xl font-bold text-[#2c3e50]">Perfil do Usuário</h1>
                <p class="text-gray-600 mt-1">Gerencie suas informações pessoais e preferências</p>
            </div>
            
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
              
                <div class="lg:col-span-2 space-y-6">
                    <div class="card p-0 overflow-hidden">
                        <div class="border-b border-gray-200 bg-[#e8ebee]">
                            <nav class="flex -mb-px overflow-x-auto">
                                <button class="px-4 py-3 md:px-6 md:py-4 text-sm font-medium tab-active flex items-center whitespace-nowrap">
                                    <i class="fas fa-user-circle mr-2 icon-custom"></i> Informações Pessoais
                                </button>
                            </nav>
                        </div>
                        
                        <div class="p-4 md:p-6 lg:p-8">
                            <div class="mb-6">
                                <h2 class="text-xl md:text-2xl font-bold text-[#2c3e50] flex items-center">
                                    <i class="fas fa-user-edit mr-3 icon-custom"></i> Editar Perfil
                                </h2>
                                <p class="text-gray-600 mt-2">Atualize suas informações pessoais abaixo</p>
                            </div>
                            
                            <form action="/perfil/atualizar" method="POST" id="formEditarPerfil">
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6">
                                    <div class="space-y-2">
                                        <label class="block text-sm font-medium text-[#2c3e50] mb-1 flex items-center">
                                            <i class="fas fa-signature mr-2 icon-custom"></i> Nome *
                                        </label>
                                        <div class="relative">
                                            <input type="text" name="nome" value="<%= usuario.nome %>" 
                                                   class="w-full pl-10 pr-4 py-2 md:py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#225c96] focus:border-[#225c96] transition-all focus-custom"
                                                   required>
                                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                                <i class="fas fa-user text-gray-400"></i>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="space-y-2">
                                        <label class="block text-sm font-medium text-[#2c3e50] mb-1 flex items-center">
                                            <i class="fas fa-signature mr-2 icon-custom"></i> Sobrenome *
                                        </label>
                                        <div class="relative">
                                            <input type="text" name="sobrenome" value="<%= usuario.sobrenome %>" 
                                                   class="w-full pl-10 pr-4 py-2 md:py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#225c96] focus:border-[#225c96] transition-all focus-custom"
                                                   required>
                                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                                <i class="fas fa-user text-gray-400"></i>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="space-y-2">
                                        <label class="block text-sm font-medium text-[#2c3e50] mb-1 flex items-center">
                                            <i class="fas fa-envelope mr-2 icon-custom"></i> Email *
                                        </label>
                                        <div class="relative">
                                            <input type="email" name="email" value="<%= usuario.email %>" 
                                                   class="w-full pl-10 pr-4 py-2 md:py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#225c96] focus:border-[#225c96] transition-all focus-custom"
                                                   required>
                                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                                <i class="fas fa-at text-gray-400"></i>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="space-y-2">
                                        <label class="block text-sm font-medium text-[#2c3e50] mb-1 flex items-center">
                                            <i class="fas fa-phone mr-2 icon-custom"></i> Telefone
                                        </label>
                                        <div class="relative">
                                            <input type="tel" name="telefone" value="<%= usuario.telefone || '' %>" 
                                                   class="w-full pl-10 pr-4 py-2 md:py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#225c96] focus:border-[#225c96] transition-all focus-custom"
                                                   placeholder="(11) 99999-9999">
                                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                                <i class="fas fa-mobile-alt text-gray-400"></i>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="md:col-span-2 space-y-2">
                                        <label class="block text-sm font-medium text-[#2c3e50] mb-1 flex items-center">
                                            <i class="fas fa-users mr-2 icon-custom"></i> Turma *
                                        </label>
                                        <div class="relative">
                                            <select name="turma" class="w-full pl-10 pr-4 py-2 md:py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#225c96] focus:border-[#225c96] appearance-none transition-all focus-custom" required>
                                                <option value="">Selecione sua turma</option>
                                                <option value="quimica1A" <%= usuario.turma === 'quimica1A' ? 'selected' : '' %>>Turma química 1º-A</option>
                                                <option value="quimica1B" <%= usuario.turma === 'quimica1B' ? 'selected' : '' %>>Turma química 1º-B</option>
                                                <option value="quimica2A" <%= usuario.turma === 'quimica2A' ? 'selected' : '' %>>Turma química 2º-A</option>
                                                <option value="quimica2B" <%= usuario.turma === 'quimica2B' ? 'selected' : '' %>>Turma química 2º-B</option>
                                            </select>
                                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                                <i class="fas fa-graduation-cap text-gray-400"></i>
                                            </div>
                                            <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                                                <i class="fas fa-chevron-down text-gray-400"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="mt-8 pt-6 border-t border-gray-200 flex flex-col sm:flex-row justify-end space-y-4 sm:space-y-0 sm:space-x-4">
                                    <button type="button" onclick="location.reload()" class="px-4 py-2 md:px-6 md:py-3 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-all flex items-center justify-center">
                                        <i class="fas fa-times mr-2"></i> Cancelar
                                    </button>
                                    <button type="submit" class="px-4 py-2 md:px-6 md:py-3 bg-[#225c96] text-white rounded-lg hover:bg-[#1a2530] transition-all flex items-center justify-center">
                                        <i class="fas fa-save mr-2"></i> Salvar Alterações
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
  
                <div class="lg:col-span-1 space-y-6">
                    <div class="card p-0 overflow-hidden">
                        <div class="profile-header-gradient h-24 relative">
                            <div class="absolute -bottom-12 left-1/2 transform -translate-x-1/2">
