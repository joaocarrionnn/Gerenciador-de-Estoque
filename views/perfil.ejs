function initFormValidation() {
    const formAlterarSenha = document.getElementById('formAlterarSenha');
    const formEditarPerfil = document.getElementById('formEditarPerfil');

    if (formAlterarSenha) {
        formAlterarSenha.addEventListener('submit', validatePasswordForm);
    }

    if (formEditarPerfil) {
        formEditarPerfil.addEventListener('submit', validateProfileForm);
    }

    function validatePasswordForm(e) {
        console.log('üîê Validando formul√°rio de altera√ß√£o de senha');
        
        const senhaAtual = this.querySelector('input[name="senhaAtual"]').value;
        const novaSenha = this.querySelector('input[name="novaSenha"]').value;
        const confirmarSenha = this.querySelector('input[name="confirmarSenha"]').value;
        
        if (novaSenha !== confirmarSenha) {
            e.preventDefault();
            showToast('As senhas n√£o coincidem!', 'error');
            return;
        }
        
        if (novaSenha.length < 6) {
            e.preventDefault();
            showToast('A senha deve ter pelo menos 6 caracteres!', 'error');
            return;
        }
        
        if (novaSenha === senhaAtual) {
            e.preventDefault();
            showToast('A nova senha deve ser diferente da senha atual!', 'error');
            return;
        }
        
        console.log('‚úÖ Valida√ß√£o de senha passou - enviando formul√°rio');
    }

    function validateProfileForm(e) {
        console.log('üë§ Validando formul√°rio de edi√ß√£o de perfil');
        
        const nome = this.querySelector('input[name="nome"]').value.trim();
        const sobrenome = this.querySelector('input[name="sobrenome"]').value.trim();
        const email = this.querySelector('input[name="email"]').value.trim();
        const turma = this.querySelector('select[name="turma"]').value;
        
        if (!nome || !sobrenome || !email || !turma) {
            e.preventDefault();
            showToast('Por favor, preencha todos os campos obrigat√≥rios!', 'error');
            return;
        }
        
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!emailRegex.test(email)) {
            e.preventDefault();
            showToast('Por favor, insira um email v√°lido!', 'error');
            return;
        }
        
        if (nome.length < 2 || sobrenome.length < 2) {
            e.preventDefault();
            showToast('Nome e sobrenome devem ter pelo menos 2 caracteres!', 'error');
            return;
        }
        
        console.log('‚úÖ Valida√ß√£o de perfil passou - enviando formul√°rio');
    }
}

