        const novaSenha = this.querySelector('input[name="novaSenha"]').value;
        const confirmarSenha = this.querySelector('input[name="confirmarSenha"]').value;
        
        if (novaSenha !== confirmarSenha) {
            e.preventDefault();
            showToast('As senhas n√£o coincidem!', 'error');
            return;
        }
        
        if (novaSenha.length < 6) {
            e.preventDefault();
            showToast('A senha deve ter pelo menos 6 caracteres!', 'error');
            return;
        }
        
        if (novaSenha === senhaAtual) {
            e.preventDefault();
            showToast('A nova senha deve ser diferente da senha atual!', 'error');
            return;
        }
        
        console.log('‚úÖ Valida√ß√£o de senha passou - enviando formul√°rio');
    }

    function validateProfileForm(e) {
        console.log('üë§ Validando formul√°rio de edi√ß√£o de perfil');
        
        const nome = this.querySelector('input[name="nome"]').value.trim();
        const sobrenome = this.querySelector('input[name="sobrenome"]').value.trim();
        const email = this.querySelector('input[name="email"]').value.trim();
