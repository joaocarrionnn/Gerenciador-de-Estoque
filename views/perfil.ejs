                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                userId: adminSystem.selectedUser.id_usuario,
                novoTipo: novoStatus
            })
        });
        
        if (!response.ok) {
            throw new Error('Erro na resposta do servidor');
        }
        
        const data = await response.json();
        
        if (data.success) {
            // Atualizar interface
            adminSystem.selectedUser.tipo = novoStatus;
