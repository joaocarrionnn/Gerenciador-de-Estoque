function setupSearchEvents(adminSystem) {
    const { searchInput, searchResults, searchOverlay } = adminSystem.elements;

    // Busca em tempo real
    searchInput.addEventListener('input', function(e) {
        const query = e.target.value.trim();
        
        clearTimeout(adminSystem.searchTimeout);
        
        if (query.length === 0) {
            hideSearchResults(adminSystem);
            adminSystem.selectedUser = null;
            return;
        }
        
        adminSystem.searchTimeout = setTimeout(() => {
            buscarUsuarios(query, adminSystem);
        }, 300);
    });

    // Foco no input (mobile)
    searchInput.addEventListener('focus', function() {
        if (window.innerWidth <= 768) {
            searchOverlay.classList.add('active');
        }
    });

    // Fechar resultados ao clicar fora
    document.addEventListener('click', function(e) {
        if (!searchResults.contains(e.target) && !searchInput.contains(e.target)) {
            hideSearchResults(adminSystem);
        }
    });
}

