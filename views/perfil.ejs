   <style>
    :root {
        --primary-color: #2c6baf;
        --secondary-color: #34a853;
        --accent-color: #ff6b35;
        --dark-color: #2c3e50;
        --light-bg: #f8f9fc;
        --chem-light: #e8f5e9;
        --chem-dark: #1b5e20;
    }
    
    body {
        background-color: var(--light-bg);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
    }
    
    .profile-card {
        border-radius: 12px;
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
        transition: all 0.3s ease;
        overflow: hidden;
        background: white;
    }
    
    .profile-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 2rem 0 rgba(58, 59, 69, 0.2);
    }
    
    .profile-header {
        background: linear-gradient(135deg, var(--primary-color), var(--chem-dark));
        border-radius: 12px 12px 0 0;
        padding: 2rem;
        color: white;
        text-align: center;
        position: relative;
    }
    
    .profile-img-container {
        position: relative;
        display: inline-block;
        margin-bottom: 1rem;
    }
    
    .profile-img {
        width: 150px;
        height: 150px;
        border: 5px solid rgba(255, 255, 255, 0.4);
        object-fit: cover;
        border-radius: 50%;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        background-color: #fff;
        padding: 4px;
    }
    
    .file-upload {
        position: absolute;
        bottom: 10px;
        right: 10px;
        background: var(--accent-color);
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
    }
    
    .file-upload:hover {
        transform: scale(1.1);
        background: #e85a20;
    }
    
    .file-upload i {
        color: white;
        font-size: 18px;
    }
    
    .file-upload input[type="file"] {
        position: absolute;
        left: 0;
        top: 0;
        opacity: 0;
        width: 100%;
        height: 100%;
        cursor: pointer;
    }
    
    .nav-pills .nav-link {
        color: var(--dark-color);
        border-radius: 5px;
        margin-right: 5px;
        font-weight: 500;
    }
    
    .nav-pills .nav-link.active {
        background: linear-gradient(135deg, var(--primary-color), var(--chem-dark));
        color: white;
    }
    
    .stat-box {
        background-color: white;
        border-radius: 10px;
        padding: 1.5rem;
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
        margin-bottom: 1.5rem;
        transition: all 0.3s ease;
        border-left: 4px solid var(--primary-color);
    }
    
    .stat-box:hover {
        transform: translateY(-3px);
        box-shadow: 0 0.5rem 2rem 0 rgba(58, 59, 69, 0.15);
    }
    
    .chem-badge {
        background-color: var(--chem-light);
        color: var(--chem-dark);
        font-weight: 600;
        padding: 5px 10px;
        border-radius: 20px;
        font-size: 0.85rem;
    }
    
    .progress {
        height: 12px;
        border-radius: 10px;
        background-color: #e9ecef;
    }
    
    .progress-bar {
        background: linear-gradient(135deg, var(--primary-color), var(--chem-dark));
        border-radius: 10px;
    }
    
    .social-icon {
        width: 40px;
        height: 40px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        background-color: var(--light-bg);
        color: var(--primary-color);
        transition: all 0.3s ease;
    }
    
    .social-icon:hover {
        background: linear-gradient(135deg, var(--primary-color), var(--chem-dark));
        color: white;
        transform: translateY(-3px);
    }
    
    .activity-item {
        border-left: 3px solid var(--primary-color);
        padding-left: 25px;
        position: relative;
        padding-bottom: 25px;
    }
    
    .activity-item:before {
        content: '';
        width: 16px;
        height: 16px;
        border-radius: 50%;
        background: var(--primary-color);
        position: absolute;
        left: -9px;
        top: 0;
        border: 3px solid white;
        box-shadow: 0 0 0 2px var(--primary-color);
    }
    
    .btn-primary {
        background: linear-gradient(135deg, var(--primary-color), var(--chem-dark));
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(44, 107, 175, 0.4);
