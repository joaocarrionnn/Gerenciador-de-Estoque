        /* ============= EXPANSÃO MODERNA E SUAVE (SEM BUGS) ============= */
.feature {
    position: relative;
    cursor: pointer;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
}

.feature:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(44, 62, 80, 0.12);
}

/* Conteúdo expandido */
.feature-expanded {
    max-height: 0;
    overflow: hidden;
    opacity: 0;
    transform: translateY(-20px);
    transition: all 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
    background: white;
}

/* Quando expandido */
.feature.expanded {
    grid-column: 1 / -1;
    background: white;
    border-radius: 16px;
    box-shadow: 0 30px 80px rgba(0,0,0,0.18);
    z-index: 10;
    transform: translateY(-16px);
    margin: 2.5rem 0;
    animation: cardPopIn 0.6s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
}

.feature.expanded .feature-expanded {
    max-height: 1200px;
    opacity: 1;
    transform: translateY(0);
    padding: 2.5rem 2rem;
    overflow-y: auto;
    max-height: calc(100vh - 280px);
    scrollbar-width: thin;
    scrollbar-color: #95a5a6 #f1f1f1;
}

/* Animação de entrada (pop suave) */
@keyframes cardPopIn {
    0% {
        opacity: 0;
        transform: translateY(-16px) scale(0.95);
    }
    100% {
        opacity: 1;
        transform: translateY(-16px) scale(1);
    }
}

/* Animação de saída (quando fecha) */
.feature:not(.expanded) .feature-expanded {
    animation: cardPopOut 0.4s ease forwards;
}

@keyframes cardPopOut {
    0% {
        opacity: 1;
        transform: translateY(0);
    }
    100% {
        opacity: 0;
        transform: translateY(-20px);
        max-height: 0;
        padding: 0;
    }
}

/* Botão fechar com efeito premium */
.close-expanded {
    position: sticky;
    top: 1rem;
    right: 1.5rem;
    float: right;
    background: white;
    border: 2px solid #e9ecef;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    font-size: 1.6rem;
    cursor: pointer;
    color: #6b7280;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 20;
    box-shadow: 0 8px 25px rgba(0,0,0,0.12);
}

.close-expanded:hover {
    background: #ef4444;
    color: white;
    border-color: #ef4444;
    transform: scale(1.1) rotate(90deg);
}

/* Scroll suave e moderno */
.feature.expanded .feature-expanded::-webkit-scrollbar {
    width: 10px;
}
.feature.expanded .feature-expanded::-webkit-scrollbar-track {
    background: #f1f5f9;
    border-radius: 10px;
}
.feature.expanded .feature-expanded::-webkit-scrollbar-thumb {
    background: #94a3b8;
    border-radius: 10px;
    border: 2px solid #f1f5f9;
}
.feature.expanded .feature-expanded::-webkit-scrollbar-thumb:hover {
    background: #64748b;
}

