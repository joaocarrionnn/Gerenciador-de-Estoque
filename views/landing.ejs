                    <div style="padding:1.2rem;background:${p.status==='Crítico'?'#fdf2f2':p.status==='Vencendo'?'#fff5e7':'#f8f9fa'};display:flex;justify-content:space-between;align-items:center;">
                        <div><strong style="font-size:1.15rem;">${p.nome}</strong><br><small style="color:#7f8c8d;">#${p.id} • ${p.loc}</small></div>
                        <span style="background:#d4edda;color:#155724;padding:0.4rem 0.9rem;border-radius:50px;font-size:0.85rem;">${p.cat}</span>
                    </div>
                    <div style="padding:1.2rem;">
                        <div style="display:flex;justify-content:space-between;margin:1rem 0;">
                            <div><small style="color:#95a5a6;">Quantidade</small>
                                <div style="font-size:1.7rem;font-weight:700;color:${p.status==='Crítico'||p.status==='Baixo'?'#e74c3c':'#27ae60'}">${p.qtd} ${p.un}</div>
                            </div>
                            <div style="text-align:right;"><small style="color:#95a5a6;">Validade</small>
                                <div style="font-weight:600;color:${p.status==='Vencendo'?'#e67e22':'#2c3e50'}">${p.val}</div>
                            </div>
                        </div>
                        <div style="display:flex;gap:0.5rem;flex-wrap:wrap;">
                            <span style="background:${p.status==='Disponível'?'#d1ecf1':p.status==='Baixo'?'#fff3cd':p.status==='Crítico'?'#f8d7da':'#fff5e7'};
                                        color:${p.status==='Disponível'?'#0c5460':p.status==='Baixo'?'#856404':p.status==='Crítico'?'#721c24':'#e67e22'};
                                        padding:0.5rem 1rem;border-radius:50px;font-size:0.9rem;">
                                ${p.status==='Crítico'?'Estoque crítico':p.status==='Vencendo'?'Vencendo em breve':p.status}
                            </span>
                            <span style="background:#f8d7da;color:#721c24;padding:0.5rem 1rem;border-radius:50px;font-size:0.9rem;">${p.risco} risco</span>
                        </div>
                    </div>
                </div>
            `).join('');
    }

    function filtrar() {
        const busca = (document.getElementById('estoque-search')?.value || '').toLowerCase();
        const cat = document.getElementById('estoque-categoria')?.value || '';
        const status = document.getElementById('estoque-status')?.value || '';

        const filtrados = produtosDemo.filter(p => {
            const matchBusca = p.nome.toLowerCase().includes(busca) || p.id.includes(busca) || p.loc.toLowerCase().includes(busca);
            const matchCat = !cat || p.cat === cat;
            const matchStatus = !status || p.status === status;
            return matchBusca && matchCat && matchStatus;
        });
        render(filtrados);
    }

    render(produtosDemo);
    document.getElementById('estoque-search')?.addEventListener('input', filtrar);
    document.getElementById('estoque-categoria')?.addEventListener('change', filtrar);
    document.getElementById('estoque-status')?.addEventListener('change', filtrar);
}

