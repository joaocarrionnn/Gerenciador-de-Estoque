    grid.dataset.init = 'true';

    function render(lista) {
        grid.innerHTML = lista.length === 0 
            ? `<div style="grid-column:1/-1;text-align:center;padding:4rem;color:#95a5a6;"><i class="fas fa-search" style="font-size:4rem;margin-bottom:1rem;"></i><p>Nenhum item encontrado</p></div>`
