        document.addEventListener('DOMContentLoaded', function() {
    const pdfUploadArea = document.getElementById('pdfUploadArea');
    const pdfFileInput = document.getElementById('pdfFiles');
    const pdfPreview = document.getElementById('pdfPreview');
    let selectedFiles = [];

    // Clique na área de upload
    pdfUploadArea.addEventListener('click', function(e) {
        if (e.target === pdfUploadArea || e.target.closest('.pdf-upload-area')) {
            pdfFileInput.click();
        }
    });

    // Arrastar e soltar
    pdfUploadArea.addEventListener('dragover', function(e) {
        e.preventDefault();
        pdfUploadArea.classList.add('dragover');
    });

    pdfUploadArea.addEventListener('dragleave', function() {
        pdfUploadArea.classList.remove('dragover');
    });

    pdfUploadArea.addEventListener('drop', function(e) {
        e.preventDefault();
        pdfUploadArea.classList.remove('dragover');
        
        const files = Array.from(e.dataTransfer.files);
        handlePdfFiles(files);
    });

    // Seleção de arquivos via input
    pdfFileInput.addEventListener('change', function(e) {
        const files = Array.from(this.files);
        handlePdfFiles(files);
    });

    // Função para processar arquivos PDF
    function handlePdfFiles(files) {
        const maxSize = 10 * 1024 * 1024; // 10MB
        const maxFiles = 10;
        let totalSize = selectedFiles.reduce((sum, f) => sum + f.size, 0);

        for (let file of files) {
            // Verificar limite de arquivos
            if (selectedFiles.length >= maxFiles) {
                alert(`❌ Limite de ${maxFiles} arquivos atingido.`);
                break;
            }

            // Verificar se é PDF
            if (file.type !== 'application/pdf') {
                alert(`❌ ${file.name} não é um arquivo PDF.`);
                continue;
            }

            // Verificar tamanho individual
            if (file.size > maxSize) {
                alert(`❌ ${file.name} excede o tamanho máximo de 10MB.`);
                continue;
            }

            // Verificar tamanho total
            if (totalSize + file.size > 150 * 1024 * 1024) {
                alert('❌ Tamanho total dos arquivos excede 150MB.');
                break;
            }

            // Verificar se já foi adicionado
            const exists = selectedFiles.some(f => 
                f.name === file.name && f.size === file.size
            );

            if (!exists) {
                selectedFiles.push(file);
                totalSize += file.size;
                addPdfPreview(file, selectedFiles.length - 1);
            }
        }

        // Atualizar o input com os arquivos selecionados
        updateFileInput();
        updatePreviewVisibility();
    }

    // Adicionar preview do PDF
    function addPdfPreview(file, index) {
        const previewItem = document.createElement('div');
        previewItem.className = 'pdf-preview-item';
        previewItem.dataset.index = index;
        
        previewItem.innerHTML = `
            <div class="pdf-preview-info">
                <i class="fas fa-file-pdf pdf-preview-icon"></i>
                <div class="pdf-preview-details">
                    <span class="pdf-preview-name">${escapeHtml(file.name)}</span>
                    <span class="pdf-preview-size">${formatFileSize(file.size)}</span>
                </div>
            </div>
            <button type="button" class="pdf-remove-btn" onclick="removePdfByIndex(${index})">
                <i class="fas fa-times"></i>
            </button>
        `;

        pdfPreview.appendChild(previewItem);
    }

    // Remover preview do PDF por índice
    window.removePdfByIndex = function(index) {
        selectedFiles.splice(index, 1);
        
        // Remover elemento visual
        const item = pdfPreview.querySelector(`[data-index="${index}"]`);
        if (item) {
            item.remove();
        }

        // Reindexar os itens restantes
        const items = pdfPreview.querySelectorAll('.pdf-preview-item');
        items.forEach((item, newIndex) => {
            item.dataset.index = newIndex;
            const btn = item.querySelector('.pdf-remove-btn');
            btn.onclick = () => removePdfByIndex(newIndex);
        });

        updateFileInput();
        updatePreviewVisibility();
    };

    // Atualizar o input file com os arquivos selecionados
    function updateFileInput() {
        const dataTransfer = new DataTransfer();
        selectedFiles.forEach(file => {
            dataTransfer.items.add(file);
        });
        pdfFileInput.files = dataTransfer.files;
    }

    // Atualizar visibilidade da área de preview
    function updatePreviewVisibility() {
        if (selectedFiles.length > 0) {
            pdfPreview.style.display = 'block';
        } else {
            pdfPreview.style.display = 'none';
        }
    }

    // Formatador de tamanho de arquivo
    function formatFileSize(bytes) {
        if (bytes === 0) return '0 Bytes';
        const k = 1024;
        const sizes = ['Bytes', 'KB', 'MB', 'GB'];
        const i = Math.floor(Math.log(bytes) / Math.log(k));
        return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
    }

    // Escape HTML para prevenir XSS
    function escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }

    // Mostrar loading ao submeter o formulário
    const form = document.getElementById('productForm');
    form.addEventListener('submit', function(e) {
        if (selectedFiles.length > 0) {
            // Adicionar indicador de loading
            const submitBtn = form.querySelector('button[type="submit"]');
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Enviando arquivos...';
        }
    });
});

