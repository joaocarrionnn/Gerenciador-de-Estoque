// Função para deletar PDF existente
async function deleteExistingPDF(pdfId, fileName) {
    if (!confirm(`Tem certeza que deseja excluir o PDF "${fileName}"?`)) {
        return;
    }

    try {
        const response = await fetch(`/api/produtos/pdfs/${pdfId}`, {
            method: 'DELETE'
        });

        const result = await response.json();

        if (result.success) {
            // Remover elemento da tela
            const item = document.querySelector(`[data-pdf-id="${pdfId}"]`);
            if (item) {
                item.remove();
            }

            alert('✅ PDF excluído com sucesso!');
        } else {
            alert('❌ Erro ao excluir PDF: ' + result.error);
        }
    } catch (error) {
        console.error('Erro ao excluir PDF:', error);
        alert('❌ Erro ao excluir PDF');
    }
}

